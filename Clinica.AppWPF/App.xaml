<Application
	x:Class="Clinica.AppWPF.App"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="clr-namespace:Clinica.AppWPF"
	StartupUri="Login.xaml"
	ShutdownMode="OnLastWindowClose">
	<!-- StartupUri="Login.xaml" -->
	<!-- StartupUri="UsuarioRecepcionista/WindowGestionTurno.xaml"  -->
	<Application.Resources>
		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,CONTENTCONTROLS,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="ContentControlLindo"
			TargetType="ContentControl">
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="ContentControl">
						<Border
							CornerRadius="10"
							Padding="10"
							BorderBrush="Black"
							BorderThickness="0">
							<Border.Background>
								<LinearGradientBrush
									EndPoint="0.5,1"
									StartPoint="0.5,0">
									<GradientStop
										Color="#FFB9B9B9" />
									<GradientStop
										Color="#FFE8E8E8"
										Offset="0.738" />
								</LinearGradientBrush>
							</Border.Background>
							<Border.Effect>
								<DropShadowEffect
									Color="Black"
									ShadowDepth="8"
									Opacity="1"
									BlurRadius="7" />
							</Border.Effect>
							<ContentPresenter />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,PasswordBox,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="PasswordBoxLindo2"
			TargetType="PasswordBox">
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="PasswordBox">
						<Border
							x:Name="BorderElement"
							CornerRadius="5"
							Background="White"
							BorderBrush="Gray"
							BorderThickness="1"
							Padding="5">
							<Border.Effect>
								<DropShadowEffect
									Color="Black"
									BlurRadius="20"
									ShadowDepth="12" />
							</Border.Effect>
							<ScrollViewer
								x:Name="PART_ContentHost" />
						</Border>
						<ControlTemplate.Triggers>
							<Trigger
								Property="IsEnabled"
								Value="False">
								<!-- Change the opacity and background when disabled -->
								<Setter
									TargetName="BorderElement"
									Property="Opacity"
									Value="0.9" />
								<Setter
									TargetName="BorderElement"
									Property="Background"
									Value="#FFF3F3F3" />
								<Setter
									TargetName="BorderElement"
									Property="BorderBrush"
									Value="Gray" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,TEXTBOXS,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="TextBoxLindo2"
			TargetType="TextBox">
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="TextBox">
						<Border
							x:Name="BorderElement"
							CornerRadius="5"
							Background="White"
							BorderBrush="Gray"
							BorderThickness="1"
							Padding="5">
							<Border.Effect>
								<DropShadowEffect
									Color="Black"
									BlurRadius="20"
									ShadowDepth="12" />
							</Border.Effect>
							<ScrollViewer
								x:Name="PART_ContentHost" />
						</Border>
						<ControlTemplate.Triggers>
							<Trigger
								Property="IsEnabled"
								Value="False">
								<!-- Change the opacity and background when disabled -->
								<Setter
									TargetName="BorderElement"
									Property="Opacity"
									Value="0.9" />
								<Setter
									TargetName="BorderElement"
									Property="Background"
									Value="#FFF3F3F3" />
								<Setter
									TargetName="BorderElement"
									Property="BorderBrush"
									Value="Gray" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,LABELS,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="LabelLindo"
			TargetType="Label">
			<Setter
				Property="Background">
				<Setter.Value>
					<ImageBrush
						ImageSource="pack://application:,,,/PublishedResources/images/labelFondo2025.png" />
				</Setter.Value>
			</Setter>
			<Setter
				Property="Effect">
				<Setter.Value>
					<DropShadowEffect
						Color="Black"
						Direction="270"
						ShadowDepth="5"
						BlurRadius="8"
						Opacity="0.7" />
				</Setter.Value>
			</Setter>
			<!-- OVERRIDE DEL TEMPLATE -->
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="Label">
						<Border
							Background="{TemplateBinding Background}"
							Padding="{TemplateBinding Padding}"
							SnapsToDevicePixels="True">
							<!-- El contenido del label -->
							<ContentPresenter
								RecognizesAccessKey="True"
								HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
								VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<Style
			x:Key="LabelLindo2024"
			TargetType="Label">
			<Setter
				Property="Effect">
				<Setter.Value>
					<DropShadowEffect
						Color="Black"
						Direction="270"
						ShadowDepth="5"
						BlurRadius="8"
						Opacity="0.7" />
				</Setter.Value>
			</Setter>
		</Style>
		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,BOTONES,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="BotonRedondeadoViejo"
			TargetType="{x:Type Button}">
			<EventSetter
				Event="MouseEnter"
				Handler="StyleButton_MouseEnter" />
			<!-- <EventSetter Event="Click" Handler="StyleButton_Click"/> -->
			<!-- Anda con retraso. Mas vale ponerlo en los metodos de los botones directamente. Aprovechar mi clase AtajosDeVentana -->
			<Setter
				Property="Foreground"
				Value="Black" />
			<Setter
				Property="BorderThickness"
				Value="0" />
			<Setter
				Property="FontSize"
				Value="20" />
			<Setter
				Property="FontFamily"
				Value="Baskerville Old Face" />
			<Setter
				Property="FontWeight"
				Value="Bold" />
			<Setter
				Property="Height"
				Value="37" />
			<Setter
				Property="BorderBrush"
				Value="#FF0E0D0D" />
			<Setter
				Property="Width"
				Value="170" />
			<Setter
				Property="Margin"
				Value="5,5,5,5" />
			<Setter
				Property="RenderTransformOrigin"
				Value="0.5,0.5" />
			<Setter
				Property="RenderTransform">
				<Setter.Value>
					<!-- Tamaño inicial del botón -->
					<ScaleTransform
						ScaleX="1"
						ScaleY="1" />
				</Setter.Value>
			</Setter>
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="{x:Type Button}">
						<Grid>
							<Border
								x:Name="border"
								CornerRadius="15">
								<Border.Background>
									<ImageBrush
										ImageSource="pack://application:,,,/PublishedResources/images/boton/doradito.jpg" />
								</Border.Background>
								<TextBlock
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Text="{TemplateBinding Content}"
									Foreground="{TemplateBinding Foreground}" />
							</Border>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger
								Property="IsMouseOver"
								Value="True">
								<Setter
									TargetName="border"
									Property="Background">
									<Setter.Value>
										<ImageBrush
											ImageSource="pack://application:,,,/PublishedResources/images/boton/doraditoOscuro.jpg" />
									</Setter.Value>
								</Setter>
								<Setter
									Property="Foreground"
									Value="Black" />
								<Setter
									Property="BorderThickness"
									Value="8" />
								<!-- Cambiar el tamaño del botón al pasar el mouse -->
								<Setter
									Property="RenderTransform">
									<Setter.Value>
										<ScaleTransform
											ScaleX="1.2"
											ScaleY="1.2" />
									</Setter.Value>
								</Setter>
							</Trigger>
							<Trigger
								Property="IsEnabled"
								Value="False">
								<Setter
									Property="Foreground"
									Value="Gray" />
								<Setter
									TargetName="border"
									Property="Background">
									<Setter.Value>
										<ImageBrush
											ImageSource="pack://application:,,,/PublishedResources/images/boton/disabled.jpg" />
									</Setter.Value>
								</Setter>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Setter
				Property="Effect">
				<Setter.Value>
					<DropShadowEffect
						Color="Black"
						BlurRadius="15"
						Opacity="1"
						ShadowDepth="10" />
				</Setter.Value>
			</Setter>
		</Style>
		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,BOTONES (NUEVO ESTILO VERDE/AZUL) ,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="BotonRedondeado"
			TargetType="{x:Type Button}">
			<!-- Puedes dejar estos EventSetter si tenés el manejador en código.
                 Si te da error, simplemente borrá los EventSetter. -->
			<!--<EventSetter Event="MouseEnter" Handler="StyleButton_MouseEnter" />-->
			<Setter
				Property="Foreground"
				Value="White" />
			<Setter
				Property="FontWeight"
				Value="Bold" />
			<Setter
				Property="BorderThickness"
				Value="0" />
			<Setter
				Property="Cursor"
				Value="Hand" />
			<Setter
				Property="RenderTransformOrigin"
				Value="0.5,0.5" />
			<Setter
				Property="RenderTransform">
				<Setter.Value>
					<ScaleTransform
						ScaleX="1"
						ScaleY="1" />
				</Setter.Value>
			</Setter>
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="{x:Type Button}">
						<Grid>
							<Border
								x:Name="border"
								CornerRadius="15">
								<Border.Background>
									<!-- Imagen verde/azul de los botones -->
									<ImageBrush
										ImageSource="PublishedResources/images/boton/BLUEGREEN.jpeg"
										Stretch="Fill" />
								</Border.Background>
								<TextBlock
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Text="{TemplateBinding Content}"
									Foreground="{TemplateBinding Foreground}" />
							</Border>
						</Grid>
						<ControlTemplate.Triggers>
							<!-- Hover -->
							<Trigger
								Property="IsMouseOver"
								Value="True">
								<Setter
									TargetName="border"
									Property="Opacity"
									Value="0.9" />
								<Setter
									Property="RenderTransform">
									<Setter.Value>
										<ScaleTransform
											ScaleX="1.05"
											ScaleY="1.05" />
									</Setter.Value>
								</Setter>
							</Trigger>
							<!-- Deshabilitado -->
							<Trigger
								Property="IsEnabled"
								Value="False">
								<Setter
									TargetName="border"
									Property="Opacity"
									Value="0.5" />
								<Setter
									Property="Foreground"
									Value="#FFCCCCCC" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Setter
				Property="Effect">
				<Setter.Value>
					<DropShadowEffect
						Color="Black"
						BlurRadius="15"
						Opacity="1"
						ShadowDepth="10" />
				</Setter.Value>
			</Setter>
		</Style>
	</Application.Resources>
</Application>
