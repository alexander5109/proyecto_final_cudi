		<Style
			x:Key="ContentControlConFondoBlur"
			TargetType="ContentControl">
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="ContentControl">
						<Grid
							ClipToBounds="True">
							<!-- Imagen de fondo -->
							<Image
								Source="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg"
								Stretch="UniformToFill">
								<Image.Effect>
									<BlurEffect
										Radius="15" />
								</Image.Effect>
							</Image>
							<!-- Overlay tipo vidrio -->
							<Border
								Background="#60FFFFFF"
								CornerRadius="14" />
							<Border
								Margin="0"
								Padding="12"
								CornerRadius="14">
								<Border.Effect>
									<DropShadowEffect
										Color="#66000000"
										BlurRadius="12"
										ShadowDepth="3" />
								</Border.Effect>
								<ContentPresenter />
							</Border>
						</Grid>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
