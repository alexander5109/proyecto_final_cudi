		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,REFRESCAR,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="BotonRefrescar"
			TargetType="Button">
			<!-- Configuración base -->
			<Setter
				Property="Width"
				Value="50" />
			<Setter
				Property="Height"
				Value="50" />
			<Setter
				Property="FontSize"
				Value="20" />
			<Setter
				Property="BorderBrush"
				Value="{x:Null}" />
			<Setter
				Property="Foreground"
				Value="{x:Null}" />
			<Setter
				Property="Cursor"
				Value="Hand" />
			<Setter
				Property="FocusVisualStyle"
				Value="{x:Null}" />
			<!-- Para el scale -->
			<Setter
				Property="RenderTransformOrigin"
				Value="0.5,0.5" />
			<Setter
				Property="RenderTransform">
				<Setter.Value>
					<ScaleTransform
						ScaleX="1"
						ScaleY="1" />
				</Setter.Value>
			</Setter>
			<!-- Template mínimo -->
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="Button">
						<Border
							x:Name="border"
							Background="{TemplateBinding Background}">
							<ContentPresenter />
						</Border>
						<ControlTemplate.Triggers>
							<!-- Hover -->
							<Trigger
								Property="IsMouseOver"
								Value="True">
								<Setter
									Property="RenderTransform">
									<Setter.Value>
										<ScaleTransform
											ScaleX="1.1"
											ScaleY="1.1" />
									</Setter.Value>
								</Setter>
								<Setter
									TargetName="border"
									Property="Opacity"
									Value="0.9" />
							</Trigger>
							<!-- Disabled -->
							<Trigger
								Property="IsEnabled"
								Value="False">
								<Setter
									TargetName="border"
									Property="Opacity"
									Value="0.5" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<!-- Imagen -->
			<Setter
				Property="Background">
				<Setter.Value>
					<ImageBrush
						ImageSource="/PublishedResources/images/refrescar.png"
						Stretch="Uniform" />
				</Setter.Value>
			</Setter>
		</Style>
		<!-- ,,,,,,,,,,,,,,,,,,,,,,,,,,BOTONES,,,,,,,,,,,,,,,,,,,,,,,,,, -->
		<Style
			x:Key="BotonRedondeadoViejo"
			TargetType="{x:Type Button}">
			<EventSetter
				Event="MouseEnter"
				Handler="StyleButton_MouseEnter" />
			<!-- <EventSetter Event="Click" Handler="StyleButton_Click"/> -->
			<!-- Anda con retraso. Mas vale ponerlo en los metodos de los botones directamente. Aprovechar mi clase AtajosDeVentana -->
			<Setter
				Property="Foreground"
				Value="Black" />
			<Setter
				Property="BorderThickness"
				Value="0" />
			<Setter
				Property="FontSize"
				Value="20" />
			<Setter
				Property="FontFamily"
				Value="Baskerville Old Face" />
			<Setter
				Property="FontWeight"
				Value="Bold" />
			<Setter
				Property="Height"
				Value="37" />
			<Setter
				Property="BorderBrush"
				Value="#FF0E0D0D" />
			<Setter
				Property="Width"
				Value="170" />
			<Setter
				Property="Margin"
				Value="5,5,5,5" />
			<Setter
				Property="RenderTransformOrigin"
				Value="0.5,0.5" />
			<Setter
				Property="RenderTransform">
				<Setter.Value>
					<!-- Tamaño inicial del botón -->
					<ScaleTransform
						ScaleX="1"
						ScaleY="1" />
				</Setter.Value>
			</Setter>
			<Setter
				Property="Template">
				<Setter.Value>
					<ControlTemplate
						TargetType="{x:Type Button}">
						<Grid>
							<Border
								x:Name="border"
								CornerRadius="15">
								<Border.Background>
									<ImageBrush
										ImageSource="pack://application:,,,/PublishedResources/images/boton/doradito.jpg" />
								</Border.Background>
								<TextBlock
									HorizontalAlignment="Center"
									VerticalAlignment="Center"
									Text="{TemplateBinding Content}"
									Foreground="{TemplateBinding Foreground}" />
							</Border>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger
								Property="IsMouseOver"
								Value="True">
								<Setter
									TargetName="border"
									Property="Background">
									<Setter.Value>
										<ImageBrush
											ImageSource="pack://application:,,,/PublishedResources/images/boton/doraditoOscuro.jpg" />
									</Setter.Value>
								</Setter>
								<Setter
									Property="Foreground"
									Value="Black" />
								<Setter
									Property="BorderThickness"
									Value="8" />
								<!-- Cambiar el tamaño del botón al pasar el mouse -->
								<Setter
									Property="RenderTransform">
									<Setter.Value>
										<ScaleTransform
											ScaleX="1.2"
											ScaleY="1.2" />
									</Setter.Value>
								</Setter>
							</Trigger>
							<Trigger
								Property="IsEnabled"
								Value="False">
								<Setter
									Property="Foreground"
									Value="Gray" />
								<Setter
									TargetName="border"
									Property="Background">
									<Setter.Value>
										<ImageBrush
											ImageSource="pack://application:,,,/PublishedResources/images/boton/disabled.jpg" />
									</Setter.Value>
								</Setter>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
			<Setter
				Property="Effect">
				<Setter.Value>
					<DropShadowEffect
						Color="Black"
						BlurRadius="15"
						Opacity="1"
						ShadowDepth="10" />
				</Setter.Value>
			</Setter>
		</Style>
