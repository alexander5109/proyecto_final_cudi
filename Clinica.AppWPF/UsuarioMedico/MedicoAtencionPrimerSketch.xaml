<Window
	x:Class="Clinica.AppWPF.UsuarioMedico.MedicoAtencionPrimerSketch"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Atención Médica"
	MinWidth="1024"
	MinHeight="600"
	WindowStartupLocation="CenterScreen">
	<Window.Background>
		<ImageBrush
			ImageSource="/PublishedResources/images2025sol/fondoCeleste2024medico.jpg"
			Stretch="UniformToFill" />
	</Window.Background>
	<Grid
		Margin="16">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>
			<!-- HEADER -->
			<DockPanel
				Grid.Row="0"
				Margin="0 0 0 8">
				<TextBlock
					Text="Atención del día"
					FontSize="22"
					FontWeight="SemiBold"
					DockPanel.Dock="Left" />
				<StackPanel
					Orientation="Horizontal"
					DockPanel.Dock="Right">
					<TextBlock
						Text="Fecha:"
						Margin="0 0 6 0" />
					<DatePicker
						Width="140" />
				</StackPanel>
			</DockPanel>
			<!-- CUERPO PRINCIPAL -->
			<Grid
				Grid.Row="1"
				Margin="0 0 0 8">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						Width="2*" />
					<ColumnDefinition
						Width="3*" />
				</Grid.ColumnDefinitions>
				<!-- TURNOS DEL DÍA -->
				<Grid
					Grid.Column="0">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="*" />
					</Grid.RowDefinitions>
					<TextBlock
						Text="Turnos concretados"
						FontWeight="SemiBold"
						Margin="0 0 0 6" />
					<ListView
						Margin="25"
						Grid.Row="1">
						<ListView.View>
							<GridView>
								<GridViewColumn
									Header="Hora"
									Width="70" />
								<GridViewColumn
									Header="Paciente"
									Width="200" />
							</GridView>
						</ListView.View>
					</ListView>
				</Grid>
				<!-- HISTORIAL -->
				<Grid
					Grid.Column="1">
					<Grid.RowDefinitions>
						<RowDefinition
							Height="Auto" />
						<RowDefinition
							Height="*" />
					</Grid.RowDefinitions>
					<TextBlock
						Text="Historial de consultas"
						FontWeight="SemiBold"
						Margin="0 0 0 6" />
					<ListView
						Margin="25"
						Grid.Row="1">
						<ListView.View>
							<GridView>
								<GridViewColumn
									Header="Fecha"
									Width="120" />
								<GridViewColumn
									Header="Diagnóstico"
									Width="200" />
								<GridViewColumn
									Header="Observaciones"
									Width="300" />
							</GridView>
						</ListView.View>
					</ListView>
				</Grid>
			</Grid>
			<!-- NUEVA CONSULTA -->
			<Grid
				Grid.Row="2">
				<Grid.RowDefinitions>
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="Auto" />
					<RowDefinition
						Height="*" />
					<RowDefinition
						Height="Auto" />
				</Grid.RowDefinitions>
				<TextBlock
					Text="Nueva consulta"
					FontWeight="SemiBold"
					Margin="0 0 0 6" />
				<!-- Diagnóstico -->
				<StackPanel
					Grid.Row="1"
					Orientation="Horizontal"
					Margin="0 0 0 6">
					<TextBlock
						Text="Diagnóstico:"
						VerticalAlignment="Center"
						Margin="0 0 6 0" />
					<ComboBox
						Width="250" />
				</StackPanel>
				<!-- Observaciones -->
				<TextBox
					Margin="25"
					Grid.Row="2"
					AcceptsReturn="True"
					TextWrapping="Wrap"
					VerticalScrollBarVisibility="Auto"
					Height="100" />
				<!-- Botón -->
				<StackPanel
					Grid.Row="3"
					Orientation="Horizontal"
					HorizontalAlignment="Right"
					Margin="0 8 0 0">
					<Button
						Style="{StaticResource BotonRedondeadoCeleste}"
						Content="Guardar consulta"
						Width="160"
						Height="32" />
				</StackPanel>
			</Grid>
		</Grid>
	</Grid>
</Window>
