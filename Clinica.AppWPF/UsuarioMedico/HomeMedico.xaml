<Window
	x:Class="Clinica.AppWPF.UsuarioMedico.HomeMedico"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Clinica Medica - Home"
	Width="1024"
	WindowStartupLocation="CenterScreen"
	Height="600">
	<Window.Background>
		<ImageBrush
			ImageSource="/PublishedResources/images/doctor.jpg" />
	</Window.Background>
	<Grid
		Margin="15,15,15,15">
		<StackPanel
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Grid.Row="1"
			Width="663">
			<Label
				Content="Sistema"
				FontSize="35"
				FontFamily="SachaWynterTight Linotype"
				Background="{x:Null}"
				Foreground="#FF333363"
				Padding="0,0,0,0"
				HorizontalAlignment="Center" />
			<Label
				Content="`Reprocesos SXXI´"
				FontSize="24"
				FontFamily="SachaWynterTight Linotype"
				Background="{x:Null}"
				Foreground="#FF333363"
				HorizontalAlignment="Center" />
			<Label
				Content="Home Doctor"
				Style="{StaticResource LabelLindo}"
				FontSize="40"
				FontFamily="Palatino Linotype"
				Foreground="#FF0F0A2B"
				HorizontalContentAlignment="Center"
				FontWeight="Bold"
				VerticalAlignment="Center"
				Margin="30,15,30,15" />
			<StackPanel
				Margin="25">
				<Button
					Content="Mis Pacientes"
					HorizontalAlignment="Center"
					Height="37"
					Width="300"
					FontSize="20"
					Style="{StaticResource BotonRedondeado}"
					FontWeight="Bold"
					BorderBrush="#FF0E0D0D"
					FontFamily="Baskerville Old Face"
					Click="MetodoBotonMisPacientes"
					Margin="7,7,7,7"
					Foreground="White" />
				<Button
					Content="Mis Turnos"
					Height="37"
					Width="275"
					FontSize="20"
					Style="{StaticResource BotonRedondeado}"
					FontWeight="Bold"
					BorderBrush="#FF0E0D0D"
					FontFamily="Baskerville Old Face"
					Click="MetodoMisTurnos"
					Margin="7,7,7,7"
					Foreground="White" />
			</StackPanel>
			<Button
				Content="Cerrar sesión"
				Height="37"
				Width="200"
				Click="MetodoBotonLogout"
				Style="{StaticResource BotonRedondeado}"
				FontSize="20"
				FontWeight="Bold"
				Margin="7,7,7,7"
				Foreground="White" />
			<Button
				Content="Salir"
				Height="37"
				Width="150"
				Click="ButtonSalir"
				Style="{StaticResource BotonRedondeado}"
				FontSize="20"
				Margin="7,7,7,5"
				FontWeight="Bold"
				Foreground="White" />
		</StackPanel>
		<CheckBox
			x:Name="soundCheckBox"
			Content="Sonidos?"
			Click="soundCheckBox_Checked"
			Margin="0,25,25,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			FontFamily="SachaWynterTight"
			FontSize="10"
			Grid.RowSpan="2">
			<CheckBox.Template>
				<ControlTemplate
					TargetType="CheckBox">
					<StackPanel
						Orientation="Horizontal">
						<Image
							Width="40"
							Height="40">
							<Image.Style>
								<Style
									TargetType="Image">
									<Style.Triggers>
										<!-- Checked state without hover -->
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="True">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOn.png" />
										</DataTrigger>
										<!-- Unchecked state without hover -->
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="False">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOff.png" />
										</DataTrigger>
										<!-- Checked state with hover -->
										<MultiDataTrigger>
											<MultiDataTrigger.Conditions>
												<Condition
													Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="True" />
												<Condition
													Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="True" />
											</MultiDataTrigger.Conditions>
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOn_hover.png" />
										</MultiDataTrigger>
										<!-- Unchecked state with hover -->
										<MultiDataTrigger>
											<MultiDataTrigger.Conditions>
												<Condition
													Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="False" />
												<Condition
													Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="True" />
											</MultiDataTrigger.Conditions>
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOff_hover.png" />
										</MultiDataTrigger>
									</Style.Triggers>
								</Style>
							</Image.Style>
						</Image>
					</StackPanel>
				</ControlTemplate>
			</CheckBox.Template>
		</CheckBox>
		<Label
			Content="Bienvenido doctor Carlos"
			FontSize="24"
			FontFamily="Palatino Linotype"
			FontWeight="Bold"
			Foreground="#FF0F0A2B"
			Margin="25,0,0,25"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			VerticalContentAlignment="Center"
			HorizontalContentAlignment="Center"
			Width="187">
			<Label.ContentTemplate>
				<DataTemplate>
					<TextBlock
						Text="{Binding}"
						TextWrapping="Wrap" />
				</DataTemplate>
			</Label.ContentTemplate>
		</Label>
	</Grid>
</Window>
