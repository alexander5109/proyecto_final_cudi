<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows7.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>PublishedResources\icons\icono.ico</ApplicationIcon>
  </PropertyGroup>


  <!-- Embed everything except sounds and JSON -->
  <ItemGroup>
    <Resource Include="PublishedResources\**\*" Exclude="PublishedResources\sonidos\**\*;PublishedResources\json_database\**\*" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="BaseDeDatosJSON.cs" />
  </ItemGroup>

  <!-- Copy sounds and JSON to output -->
  <ItemGroup>
    <None Update="PublishedResources\sonidos\**\*" CopyToOutputDirectory="PreserveNewest" />
    <None Update="PublishedResources\json_database\**\*" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.4" />
    <PackageReference Include="Microsoft.Data.SqlClient" Version="7.0.0-preview2.25289.6" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Clinica.DataPersistencia\Clinica.Infrastructure.csproj" />
    <ProjectReference Include="..\Clinica.Dominio\Clinica.Dominio.csproj" />
  </ItemGroup>

</Project>
