<Window
	x:Class="Clinica.AppWPF.WindowLoginView2025"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Clinica.AppWPF"
	mc:Ignorable="d"
	Title="WindowLoginView2025"
	Height="450"
	Width="800">
	<Grid
		Background="#F0F2F8"
		Margin="20">
		<StackPanel	VerticalAlignment="Center"	>
			<TextBlock
				Text="Clínica Médica"
				FontSize="36"
				Foreground="#303050"
				HorizontalAlignment="Center" />
			<TextBox
				x:Name="txtUsuario"
				Width="260"
				Height="35"
				FontSize="16" />
			<PasswordBox
				x:Name="txtPassword"
				Width="260"
				Height="35"
				FontSize="16" />
			<Button
				Content="Ingresar"
				Width="260"
				Height="40"
				Click="IniciarSesion_Click"
				Background="#0A84FF"
				Foreground="White"
				FontSize="18" />
			<Button
				Content="Salir"
				Width="260"
				Height="35"
				Click="Salir_Click" />
		</StackPanel>
	</Grid>
</Window>
