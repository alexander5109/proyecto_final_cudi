<Window
	x:Class="Clinica.AppWPF.UsuarioRecepcionista.RecepcionistaGestionDeTurnos"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Clinica Medica – Gestión Integral"
	WindowStartupLocation="CenterScreen"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	WindowStyle="ThreeDBorderWindow"
	Width="1280"
	Height="720"
	ResizeMode="CanResize">
	<!-- Fondo -->
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg"
			Stretch="Fill" />
	</Window.Background>
	<!-- ===================== LAYOUT GENERAL ===================== -->
	<Grid
		Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<!-- Título -->
			<RowDefinition
				Height="*" />
			<!-- Contenido -->
			<RowDefinition
				Height="Auto" />
			<!-- Botones inferiores -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="479*" />
			<!-- Búsqueda + lista -->
			<ColumnDefinition
				Width="141*" />
			<!-- Estado del turno -->
		</Grid.ColumnDefinitions>
		<!-- ===== TÍTULO ===== -->
		<Label
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Style="{StaticResource LabelLindo}"
			Content="Gestión de Turnos"
			FontSize="60"
			FontFamily="Ringbearer"
			FontWeight="Bold"
			Margin="0,10,0,20"
			HorizontalContentAlignment="Center" />
		<!-- ===== PANEL IZQUIERDO: BUSCAR TURNOS ===== -->
		<StackPanel
			Grid.Row="1"
			Grid.Column="0"
			Margin="10,10,10,10">
			<Label
				Content="Buscar turnos"
				FontSize="25"
				FontFamily="Ringbearer"
				FontWeight="Bold"
				HorizontalAlignment="Center"
				Margin="0,0,0,10" />
			<!-- FILTROS -->
			<Grid
				Margin="0,0,0,10">
				<Grid.ColumnDefinitions>
					<ColumnDefinition
						MinWidth="160" />
					<ColumnDefinition
						MinWidth="160" />
					<ColumnDefinition
						MinWidth="160" />
				</Grid.ColumnDefinitions>
				<!-- Filtro paciente -->
				<StackPanel
					Grid.Column="0"
					Margin="5">
					<Label
						Content="Filtrar por paciente:"
						Margin="5"
						FontFamily="Palatino Linotype"
						FontWeight="Bold" />
					<TextBox
						Margin="5"
						Text="{Binding FiltroTurnosPaciente, UpdateSourceTrigger=PropertyChanged}" />
				</StackPanel>
				<!-- Filtro estado -->
				<StackPanel
					Grid.Column="1"
					Margin="5">
					<Label
						Content="Filtrar por Estado:"
						FontFamily="Palatino Linotype"
						Margin="5"
						FontWeight="Bold" />
					<ComboBox
						ItemsSource="{Binding Estados}"
						Margin="5"
						SelectedItem="{Binding EstadoSeleccionado}" />
				</StackPanel>
				<!-- Filtro médico -->
				<StackPanel
					Grid.Column="2"
					Margin="5">
					<Label
						Content="Filtrar por Médico:"
						Margin="5"
						FontFamily="Palatino Linotype"
						FontWeight="Bold" />
					<TextBox
						Margin="5"
						Text="{Binding FiltroTurnosMedico, UpdateSourceTrigger=PropertyChanged}" />
				</StackPanel>
			</Grid>
			<!-- LISTA DE TURNOS -->
			<ListView
				ItemsSource="{Binding TurnosList}"
				SelectedItem="{Binding SelectedTurno}"
				Margin="5"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				MinWidth="500"
				Height="260">
				<ListView.View>
					<GridView>
						<GridViewColumn
							Header="Estado"
							Width="100"
							DisplayMemberBinding="{Binding OutcomeEstado}" />
						<GridViewColumn
							Header="FechaSolicitud"
							Width="100">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding FechaSolicitud}" />
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
						<GridViewColumn
							Header="FechaAsignada"
							Width="120">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<TextBlock
										Text="{Binding FechaAsignada}" />
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
						<GridViewColumn
							Header="Especialidad"
							Width="140"
							DisplayMemberBinding="{Binding EspecialidadCodigo}" />
						<GridViewColumn
							Header="Paciente"
							Width="200"
							DisplayMemberBinding="{Binding PacienteDisplayear}" />
						<GridViewColumn
							Header="Médico"
							Width="200"
							DisplayMemberBinding="{Binding MedicoDisplayear}" />
					</GridView>
				</ListView.View>
			</ListView>
		</StackPanel>
		<!-- ===== PANEL DERECHO: ESTADO DEL TURNO ===== -->
		<StackPanel
			Grid.Row="1"
			Grid.Column="1"
			Margin="0,10,0,10"
			Width="260"
			HorizontalAlignment="Center">
			<Label
				Content="Estado del turno:"
				FontFamily="Ringbearer"
				FontSize="25"
				FontWeight="Bold"
				HorizontalAlignment="Center" />
			<Label
				Content="{Binding SelectedTurno.OutcomeEstado}"
				FontSize="14"
				FontFamily="Palatino Linotype"
				FontWeight="Bold"
				HorizontalAlignment="Center"
				Margin="0,5,0,15" />
			<Label
				Content="Comentario:"
				FontFamily="Palatino Linotype"
				FontWeight="Bold" />
			<TextBox
				x:Name="comentarioTextBox"
				Text="{Binding SelectedTurno.OutcomeComentario}"
				IsEnabled="{Binding PuedeModificarTurnoSeleccionado}"
				Height="70"
				TextWrapping="Wrap"
				Margin="0,5,0,10" />
			<Label
				Content="Fecha de conclusión:"
				FontFamily="Palatino Linotype"
				FontWeight="Bold"
				Margin="0,10,0,0" />
			<DatePicker
				SelectedDate="{Binding SelectedTurno.OutcomeFecha}"
				IsEnabled="{Binding PuedeModificarTurnoSeleccionado}"
				Margin="0,5,0,10" />
			<StackPanel
				Margin="0,15,0,0"
				HorizontalAlignment="Center">
				<Button
					Content="Confirmar asistencia"
					Width="180"
					Height="30"
					IsEnabled="{Binding PuedeConfirmarTurno}"
					Style="{StaticResource BotonRedondeado}"
					Click="Button_ConfirmarTurnoAsistencia"
					Margin="0,5,0,10" />
				<Button
					Content="Marcar Ausente"
					Width="180"
					Height="30"
					Margin="0,5,0,10"
					IsEnabled="{Binding PuedeMarcarComoAusente}"
					Style="{StaticResource BotonRedondeado}"
					Click="Button_MarcarTurnoAusente" />
				<Button
					Content="Reprogramar Turno"
					Width="180"
					Height="30"
					Margin="0,5,0,10"
					IsEnabled="{Binding PuedeCancelarTurno}"
					Style="{StaticResource BotonRedondeado}"
					Click="Button_ReprogramarTurno" />
				<Button
					Content="Cancelar Turno"
					Width="180"
					Height="30"
					IsEnabled="{Binding PuedeCancelarTurno}"
					Style="{StaticResource BotonRedondeado}"
					Click="Button_CancelarTurno"
					Margin="0,5,0,10" />
			</StackPanel>
		</StackPanel>
		<!-- ===== BOTONES INFERIORES (HOME / SALIR) ===== -->
		<StackPanel
			Grid.Row="2"
			Orientation="Horizontal"
			HorizontalAlignment="Left"
			Margin="10,10,0,0"
			Width="380">
			<Button
				Content="Home"
				Width="170"
				Height="37"
				Margin="10,0,10,10"
				Click="ButtonHome"
				FontSize="20"
				Style="{StaticResource BotonRedondeado}" />
			<Button
				Content="Salir"
				Width="170"
				Height="37"
				Margin="10,0,10,10"
				Click="ButtonSalir"
				FontSize="20"
				Style="{StaticResource BotonRedondeado}" />
		</StackPanel>
	</Grid>
</Window>
