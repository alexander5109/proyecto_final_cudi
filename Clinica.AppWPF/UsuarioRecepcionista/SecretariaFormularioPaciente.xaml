<Window
	x:Class="Clinica.AppWPF.UsuarioRecepcionista.RecepcionistaPacienteFormulario"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Clinica Medica - Pacientes Agregar"
	Width="1024"
	Height="600"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	WindowStartupLocation="CenterScreen">
	<!-- Fondo -->
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg"
			Stretch="UniformToFill" />
	</Window.Background>
	<!-- GRID PRINCIPAL -->
	<Grid
		Margin="25,25,25,25">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<!-- Header 1 -->
			<RowDefinition
				Height="Auto" />
			<!-- Header 2 (vacío por ahora) -->
			<RowDefinition
				Height="*" />
			<!-- Formulario -->
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="450" />
			<!-- Formulario -->
			<ColumnDefinition
				Width="Auto" />
			<!-- Botones -->
		</Grid.ColumnDefinitions>
		<!-- ========================================================= -->
		<!-- HEADER PRINCIPAL -->
		<!-- ========================================================= -->
		<Border
			Grid.Row="0"
			Grid.ColumnSpan="2"
			Margin="25,25,25,0.2">
			<Label
				Content="Paciente: Datos personales"
				FontSize="44"
				FontFamily="Javanese Text"
				FlowDirection="RightToLeft"
				Style="{StaticResource LabelLindo}"
				HorizontalContentAlignment="Center"
				FontWeight="Bold"
				VerticalContentAlignment="Center"
				VerticalAlignment="Center"
				Margin="25,0,25.2,0" />
		</Border>
		<!-- HEADER SECUNDARIO (vacío pero reservado) -->
		<Border
			Grid.Row="1"
			Grid.ColumnSpan="2"
			Height="10" />
		<!-- ========================================================= -->
		<!-- FORMULARIO -->
		<!-- ========================================================= -->
		<Grid
			Grid.Row="2"
			Grid.Column="0"
			Margin="15,5,15,50">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="140" />
				<!-- Labels -->
				<ColumnDefinition
					Width="*" />
				<!-- Inputs -->
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
				<RowDefinition
					Height="Auto" />
			</Grid.RowDefinitions>
			<!-- NOMBRE -->
			<Label
				Grid.Row="0"
				Grid.Column="0"
				Content="Nombre"
				HorizontalAlignment="Right" />
			<TextBox
				Grid.Row="0"
				Grid.Column="1"
				Height="30"
				MaxLength="50"
				Margin="10,5,25.2,5"
				Text="{Binding Nombre}"
				Style="{StaticResource TextBoxLindo2}" />
			<!-- APELLIDO -->
			<Label
				Grid.Row="1"
				Grid.Column="0"
				Content="Apellido"
				HorizontalAlignment="Right" />
			<TextBox
				Grid.Row="1"
				Grid.Column="1"
				Height="30"
				MaxLength="50"
				Margin="10,5,25,5"
				Text="{Binding Apellido}"
				Style="{StaticResource TextBoxLindo2}" />
			<!-- DNI -->
			<Label
				Grid.Row="2"
				Grid.Column="0"
				Content="DNI"
				HorizontalAlignment="Right" />
			<TextBox
				Grid.Row="2"
				Grid.Column="1"
				Height="30"
				Margin="10,5,25,5"
				MaxLength="8"
				Text="{Binding Dni}"
				Style="{StaticResource TextBoxLindo2}" />
			<!-- EMAIL -->
			<Label
				Grid.Row="3"
				Grid.Column="0"
				Content="Email"
				HorizontalAlignment="Right" />
			<TextBox
				Grid.Row="3"
				Grid.Column="1"
				Height="30"
				Margin="10,5,25,5"
				Text="{Binding Email}"
				Style="{StaticResource TextBoxLindo2}" />
			<!-- TELEFONO -->
			<Label
				Grid.Row="4"
				Grid.Column="0"
				Content="Teléfono"
				HorizontalAlignment="Right" />
			<TextBox
				Grid.Row="4"
				Grid.Column="1"
				Height="30"
				Margin="10,5,25,5"
				Text="{Binding Telefono}"
				MaxLength="10"
				Style="{StaticResource TextBoxLindo2}" />
			<!-- PROVINCIA -->
			<Label
				Grid.Row="5"
				Grid.Column="0"
				Content="Provincia"
				HorizontalAlignment="Right" />
			<ComboBox
				Grid.Row="5"
				Grid.Column="1"
				Margin="10,5,25,5"
				ItemsSource="{Binding Provincias}"
				SelectedItem="{Binding Provincia}"
				DisplayMemberPath="Nombre" />
			<!-- DOMICILIO -->
			<Label
				Grid.Row="6"
				Grid.Column="0"
				Content="Domicilio"
				HorizontalAlignment="Right" />
			<TextBox
				Grid.Row="6"
				Grid.Column="1"
				Height="30"
				MaxLength="50"
				Margin="10,5,25,5"
				Text="{Binding Domicilio}"
				Style="{StaticResource TextBoxLindo2}" />
			<!-- LOCALIDAD -->
			<Label
				Grid.Row="7"
				Grid.Column="0"
				Content="Localidad"
				HorizontalAlignment="Right" />
			<TextBox
				Grid.Row="7"
				Grid.Column="1"
				Height="30"
				MaxLength="50"
				Margin="10,5,25,5"
				Text="{Binding Localidad}"
				Style="{StaticResource TextBoxLindo2}" />
			<!-- FECHA NAC -->
			<Label
				Grid.Row="8"
				Grid.Column="0"
				Content="Fecha de nacimiento"
				HorizontalAlignment="Right" />
			<DatePicker
				Grid.Row="8"
				Grid.Column="1"
				Height="30"
				Margin="10,5,25,5"
				SelectedDate="{Binding FechaNacimiento}"
				HorizontalContentAlignment="Stretch"
				VerticalContentAlignment="Stretch" />
			<!-- FECHA INGRESO -->
			<Label
				Grid.Row="9"
				Grid.Column="0"
				Content="Fecha de ingreso"
				HorizontalAlignment="Right" />
			<Label
				Grid.Row="9"
				Grid.Column="1"
				Margin="10,5,25,5"
				Height="30"
				Style="{StaticResource LabelLindo}"
				Content="{Binding FechaIngreso}"
				Background="#FFF5F0F0"
				FontSize="12" />
			<!-- ID PACIENTE -->
			<Label
				Grid.Row="10"
				Grid.Column="0"
				Content="Paciente Id"
				HorizontalAlignment="Right" />
			<Label
				Grid.Row="10"
				Grid.Column="1"
				Margin="10,5,25,5"
				Height="30"
				Style="{StaticResource LabelLindo}"
				Content="{Binding Id}"
				Background="#FFF5F0F0"
				FontSize="12" />
		</Grid>
		<!-- ========================================================= -->
		<!-- BOTONES A LA DERECHA -->
		<!-- ========================================================= -->
		<StackPanel
			Grid.Row="2"
			Grid.Column="1"
			VerticalAlignment="Top"
			Margin="25">
			<Button
				Content="Guardar cambios"
				Width="200"
				Height="38"
				Margin="0 0 0 15"
				Style="{StaticResource BotonRedondeado}"
				FontFamily="Baskerville Old Face"
				IsEnabled="{Binding PuedeGuardarCambios}"
				Click="ButtonGuardar"
				Background="Black"
				Foreground="#FF162F28"
				FontSize="20" />
			<Button
				Content="Eliminar paciente"
				Width="200"
				Height="38"
				Margin="0 0 0 15"
				Style="{StaticResource BotonRedondeado}"
				FontFamily="Baskerville Old Face"
				IsEnabled="{Binding EstaEditando}"
				Click="ButtonEliminar"
				FontSize="20" />
			<Button
				Content="Volver"
				Width="155"
				Height="38"
				Style="{StaticResource BotonRedondeado}"
				FontFamily="Baskerville Old Face"
				Click="ButtonCancelar"
				FontSize="20" />
		</StackPanel>
	</Grid>
</Window>
