<Window
	x:Class="Clinica.AppWPF.UsuarioRecepcionista.RecepcionistaPacienteFormulario"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Clinica Medica - Pacientes Agregar"
	Width="1024"
	Height="600"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	WindowStartupLocation="CenterScreen">
	<!-- Fondo -->
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg"
			Stretch="UniformToFill" />
	</Window.Background>
	<!-- GRID PRINCIPAL -->
	<Grid
		Margin="25,25,25,25">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<!-- ========================================================= -->
		<!-- HEADER PRINCIPAL -->	
		<!-- ========================================================= -->
		<Label
			Grid.ColumnSpan="2"
			Content="Paciente: Datos personales"
			FontSize="33"
			Style="{StaticResource LabelLindoConPiu}"
			HorizontalContentAlignment="Center"
			FontWeight="Bold"
			VerticalContentAlignment="Center"
			VerticalAlignment="Center" />
		<!-- HEADER SECUNDARIO (vacío pero reservado) -->
		<Border
			Grid.Row="1"
			Grid.ColumnSpan="2"
			Height="10" />
		<!-- ========================================================= -->
		<!-- FORMULARIO -->
		<!-- ========================================================= -->
		<StackPanel
			Grid.Row="2"
			Grid.Column="0"
			Margin="15">
			<!-- NOMBRE -->
			<StackPanel
				Margin="5">
				<Label
					Content="Nombre" />
				<TextBox
					Height="30"
					MaxLength="50"
					Text="{Binding Nombre}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- APELLIDO -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Apellido" />
				<TextBox
					Height="30"
					MaxLength="50"
					Text="{Binding Apellido}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- DNI -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="DNI" />
				<TextBox
					Height="30"
					MaxLength="8"
					Text="{Binding Dni}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- EMAIL -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Email" />
				<TextBox
					Height="30"
					Text="{Binding Email}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- TELEFONO -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Teléfono" />
				<TextBox
					Height="30"
					MaxLength="10"
					Text="{Binding Telefono}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- FECHA NACIMIENTO -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Fecha de nacimiento" />
				<DatePicker
					Height="30"
					SelectedDate="{Binding FechaNacimiento}" />
			</StackPanel>
		</StackPanel>
		<!-- Columna 2 -->
		<StackPanel
			Grid.Row="2"
			Grid.Column="1"
			Margin="25">
			<!-- PROVINCIA -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Provincia" />
				<ComboBox
					ItemsSource="{Binding Provincias}"
					SelectedItem="{Binding Provincia}"
					DisplayMemberPath="Nombre" />
			</StackPanel>
			<!-- DOMICILIO -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Domicilio" />
				<TextBox
					Height="30"
					MaxLength="50"
					Text="{Binding Domicilio}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- LOCALIDAD -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Localidad" />
				<TextBox
					Height="30"
					MaxLength="50"
					Text="{Binding Localidad}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- FECHA INGRESO -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Fecha de ingreso" />
				<Label
					Height="30"
					Content="{Binding FechaIngreso}"
					Style="{StaticResource LabelLindoConPiu}"
					Background="#FFF5F0F0"
					FontSize="12" />
			</StackPanel>
			<!-- ID PACIENTE -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Paciente Id" />
				<Label
					Height="30"
					Content="{Binding Id}"
					Style="{StaticResource LabelLindoConPiu}"
					Background="#FFF5F0F0"
					FontSize="12" />
			</StackPanel>
		</StackPanel>
		<!-- ========================================================= -->
		<!-- BOTONES A LA DERECHA -->
		<!-- ========================================================= -->
		<StackPanel
			Grid.Row="2"
			Grid.Column="2"
			VerticalAlignment="Top"
			Margin="25">
			<Button
				Content="Guardar cambios"
				Width="200"
				Height="38"
				Margin="0 0 0 15"
				Style="{StaticResource BotonRedondeado}"
				FontFamily="Baskerville Old Face"
				IsEnabled="{Binding PuedeGuardarCambios}"
				Click="ButtonGuardar"
				Background="Black"
				Foreground="#FF162F28"
				FontSize="20" />
			<Button
				Content="Eliminar paciente"
				Width="200"
				Height="38"
				Margin="0 0 0 15"
				Style="{StaticResource BotonRedondeado}"
				FontFamily="Baskerville Old Face"
				IsEnabled="{Binding EstaEditando}"
				Click="ButtonEliminar"
				FontSize="20" />
			<Button
				Content="Volver"
				Width="155"
				Height="38"
				Style="{StaticResource BotonRedondeado}"
				FontFamily="Baskerville Old Face"
				Click="ClickBoton_Cancelar"
				FontSize="20" />
		</StackPanel>
	</Grid>
</Window>
