<Window
	x:Class="Clinica.AppWPF.UsuarioRecepcionista.RecepcionistaPacienteFormulario"
	xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioRecepcionista"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Clinica Medica - Pacientes Agregar"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	Height="600"
	Width="800"
	WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg"
			Stretch="UniformToFill" />
    </Window.Background>
    <Grid
		Margin="39,59,0,0"
		VerticalAlignment="Top"
		HorizontalAlignment="Left"
		Height="auto"
		Width="auto">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="77" />
            <ColumnDefinition Width="53"/>
            <ColumnDefinition
				Width="300" />
            <ColumnDefinition
				Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
            <RowDefinition
				Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
			Grid.ColumnSpan="2"
			Grid.Column="2"
			HorizontalAlignment="Left"
			VerticalAlignment="Center" Margin="124,0,0,0">
            <Label
				Content="Datos Personales"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				FontWeight="DemiBold"
				FontSize="25"
				FontFamily="Ringbearer" />
        </StackPanel>
        <Label
			Content="Nombre"
			Grid.Row="1"
			Grid.Column="1"
			HorizontalAlignment="Center"
			Width="Auto"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" />
        <TextBox
			Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
			Style="{StaticResource TextBoxLindo2}"
			Grid.Row="1"
			Grid.Column="2"
			Margin="15,5,15,5"
			Height="30" />
        <Label
			Content="Apellido"
			Grid.Row="2"
			Grid.Column="1"
			HorizontalAlignment="Center"
			Width="Auto"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" />
        <TextBox
			Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged}"
			Style="{StaticResource TextBoxLindo2}"
			Grid.Row="2"
			Grid.Column="2"
			Margin="15,5,15,5"
			Height="30" />
        <Label
			Content="DNI"
			Grid.Row="3"
			Grid.Column="1"
			HorizontalAlignment="Left"
			Width="Auto"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" Margin="22,0,0,0" />
        <TextBox
			Text="{Binding Dni, UpdateSourceTrigger=PropertyChanged}"
			Style="{StaticResource TextBoxLindo2}"
			Grid.Row="3"
			Grid.Column="2"
			MaxLength="8"
			Margin="15,5,15,5"
			Height="30" />
        <Label
			Content="Email"
			Grid.Row="4"
			Grid.Column="0"
			HorizontalAlignment="Center"
			Width="130"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" Grid.ColumnSpan="2" />
        <TextBox
			Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
			Style="{StaticResource TextBoxLindo2}"
			Grid.Row="4"
			Grid.Column="2"
			Margin="15,5,15,5"
			Height="30" />
        <Label
			Content="Teléfono"
			Grid.Row="5"
			Grid.Column="1"
			HorizontalAlignment="Center"
			Width="Auto"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" />
        <TextBox
			Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
			Style="{StaticResource TextBoxLindo2}"
			Grid.Row="5"
			Grid.Column="2"
			MaxLength="20"
			Margin="15,5,15,5"
			Height="30" />
        <Label
			Content="Provincia"
			Grid.Row="6"
			Grid.Column="0"
			HorizontalAlignment="Left"
			Width="Auto"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" Grid.ColumnSpan="2" Margin="72,0,0,0" />
        <ComboBox
			Grid.Row="6"
			Grid.Column="2"
			ItemsSource="{Binding Provincias}"
			SelectedItem="{Binding Provincia, Mode=TwoWay}"
			DisplayMemberPath="Nombre"
			Margin="15,5,15,5" />
        <Label
			Content="Domicilio"
			Grid.Row="7"
			Grid.Column="0"
			HorizontalAlignment="Left"
			Width="Auto"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" Grid.ColumnSpan="2" Margin="70,0,0,0" />
        <TextBox
			Text="{Binding Domicilio, UpdateSourceTrigger=PropertyChanged}"
			Style="{StaticResource TextBoxLindo2}"
			Grid.Row="7"
			Grid.Column="2"
			Margin="15,5,15,5"
			Height="30" />
        <Label
			Content="Localidad"
			Grid.Row="8"
			Grid.Column="0"
			HorizontalAlignment="Left"
			Width="Auto"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right"
			VerticalContentAlignment="Center" Grid.ColumnSpan="2" Margin="70,0,0,0" />
        <TextBox
			Text="{Binding Localidad, UpdateSourceTrigger=PropertyChanged}"
			Style="{StaticResource TextBoxLindo2}"
			Grid.Row="8"
			Grid.Column="2"
			Margin="15,5,15,5"
			Height="30" />
        <Label
			Content="Fecha de Nacimiento"
			Grid.Row="9"
			Grid.Column="0"
			Width="Auto"
			Height="Auto"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right" Grid.ColumnSpan="2" Margin="9,0,0,0" />
        <DatePicker
			Grid.Row="9"
			Grid.Column="2"
			SelectedDate="{Binding FechaNacimiento, UpdateSourceTrigger=PropertyChanged}"
			Height="30"
			HorizontalAlignment="Center"
			VerticalAlignment="Center" />
        <Label
			Content="Fecha de Ingreso"
			Grid.Row="10"
			Width="130"
			Height="Auto"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right" Grid.ColumnSpan="2" />
        <Label
			Grid.Row="10"
			Grid.Column="2"
			Content="{Binding FechaIngreso, UpdateSourceTrigger=PropertyChanged}"
			Margin="15,5,15,5"
			Style="{StaticResource LabelLindo}"
			Height="30"
			Background="#FFF5F0F0" />
        <Label
			Content="Paciente Id"
			Grid.Row="11"
			Width="Auto"
			Height="Auto"
			HorizontalAlignment="Left"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Right" Grid.ColumnSpan="2" Margin="62,0,0,0" />
        <Label
			Grid.Row="11"
			Grid.Column="2"
			Content="{Binding Id, UpdateSourceTrigger=PropertyChanged}"
			Margin="15,5,15,5"
			Style="{StaticResource LabelLindo}"
			Height="30"
			Background="#FFF5F0F0">
            <Label.OpacityMask>
                <LinearGradientBrush
					EndPoint="0.5,1"
					StartPoint="0.5,0">
                    <GradientStop
						Color="Black" />
                    <GradientStop
						Color="White"
						Offset="1" />
                </LinearGradientBrush>
            </Label.OpacityMask>
        </Label>
        <StackPanel
			Orientation="Vertical"
			Grid.Column="3"
			Grid.RowSpan="5"
			Margin="0,27,0,0"
			VerticalAlignment="Top"
			HorizontalAlignment="Center" Grid.Row="3">
            <Button
				FontSize="20"
				Content="Guardar cambios"
				Style="{StaticResource BotonRedondeado}"
				Height="38"
				Width="200"
				BorderBrush="Black"
				Background="White"
				FontFamily="Baskerville Old Face"
				IsEnabled="{Binding PuedeGuardarCambios}"
				Click="ButtonGuardar" />
            <Button
				FontSize="20"
				Content="Eliminar paciente"
				Height="38"
				Margin="15,15,15,5"
				Width="200"
				IsEnabled="{Binding EstaEditando}"
				VerticalAlignment="Top"
				Style="{StaticResource BotonRedondeado}"
				Click="ButtonEliminar"
				BorderBrush="Black"
				Background="White"
				FontFamily="Baskerville Old Face" />
            <Button
				FontSize="20"
				Margin="15"
				Content="Volver"
				Style="{StaticResource BotonRedondeado}"
				Height="38"
				Width="155"
				BorderBrush="Black"
				Background="White"
				Click="ButtonCancelar"
				FontFamily="Baskerville Old Face" />
        </StackPanel>
        <Label
				Content="Paciente"
				FontWeight="DemiBold"
				FontSize="37"
				FontFamily="Bahnschrift SemiBold" Grid.ColumnSpan="3" Margin="-2,-42,230,42" FlowDirection="RightToLeft" HorizontalContentAlignment="Right" >
            <Label.Background>
                <ImageBrush ImageSource="/UsuarioRecepcionista/labelFondo2025.png"/>
            </Label.Background>
        </Label>
    </Grid>
</Window>