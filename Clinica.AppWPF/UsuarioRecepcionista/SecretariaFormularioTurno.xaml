<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Clinica.AppWPF.UsuarioRecepcionista.RecepcionistaDisponibilidades"
	Title="Alta de turno"
	WindowStartupLocation="CenterScreen">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images/falopa.jpg" />
	</Window.Background>
	<StackPanel
		Margin="25,25,25,25">
		<TextBlock
			FontSize="50"
			FontFamily="Ringbearer"
			FontWeight="Bold"
			Margin="25,25,25,0"
			HorizontalAlignment="Center"><Run
				Language="es-es"
				Text="Alta de turno" /></TextBlock>
		<StackPanel
			Orientation="Horizontal"
			Margin="25,0,25,25"
			HorizontalAlignment="Center">
			<StackPanel
				Orientation="Vertical"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="25,25,25,25">
				<TextBlock
					FontSize="20"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"><Run
						Text="Paciente" /><Run
						Text=" " /><LineBreak /><Run
						Text="Seleccionado" /></TextBlock>
				<!-- Campos -->
				<TextBlock
					Text="Nombre completo:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					Text="{Binding SelectedPacienteNombreCompleto}" />
				<TextBlock
					Text="Telefono:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					Text="{Binding SelectedPaciente.Telefono}" />
				<TextBlock
					Text="Email:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					Text="{Binding SelectedPaciente.Email}" />
				<TextBlock
					Text="Domicilio:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					Text="{Binding SelectedPacienteDomicilioCompleto}" />
				<StackPanel
					Margin="15,25,15,15" />
			</StackPanel>
			<ContentControl
				Style="{StaticResource ContentControlLindo}"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Margin="25,25,25,0">
				<StackPanel
					Margin="5"
					Orientation="Vertical"
					HorizontalAlignment="Center"
					VerticalAlignment="Center">
					<TextBlock
						Grid.Row="0"
						Grid.ColumnSpan="3"
						FontSize="20"
						FontFamily="Ringbearer"
						FontWeight="Bold"
						Margin="0,0,0,20"><Run
							Language="es-es"
							Text="Buscador de consultas" /></TextBlock>
					<TextBlock
						Text="Especialidad"
						FontWeight="Bold" />
					<ComboBox
						ItemsSource="{Binding EspecialidadesDisponiblesItemsSource}"
						DisplayMemberPath="Displayear"
						SelectedValuePath="Codigo"
						SelectedValue="{Binding SelectedEspecialidadCodigo, Mode=TwoWay}"
						Width="250" />
					<Separator
						Margin="0 10" />
					<TextBlock
						Text="Médico (opcional)"
						FontWeight="Bold" />
					<ComboBox
						ItemsSource="{Binding MedicosEspecialistasItemsSource}"
						DisplayMemberPath="Displayear"
						SelectedValuePath="Id"
						SelectedValue="{Binding SelectedMedicoId, Mode=TwoWay}"
						Width="250" />
					<Separator
						Margin="0 10" />
					<CheckBox
						Content="Filtrar por día"
						IsChecked="{Binding FiltroDiaEnabled}" />
					<TextBlock
						Text="Día de la semana"
						FontWeight="Bold" />
					<ComboBox
						ItemsSource="{Binding DiasSemanaItemsSource}"
						DisplayMemberPath="DiaNombre"
						SelectedValue="{Binding SelectedDiaValue, Mode=TwoWay}"
						IsEnabled="{Binding FiltroDiaEnabled}"
						Width="250" />
					<Separator
						Margin="0 10" />
					<!-- Filtro fecha -->
					<TextBlock
						Text="A partir del día:"
						FontWeight="Bold" />
					<DatePicker
						SelectedDate="{Binding PreferedFechaValue, Mode=TwoWay}" />
					<Separator
						Margin="0 10" />
					<StackPanel
						Margin="5">
						<Button
							Content="Buscar"
							Width="135"
							Height="30"
							Style="{StaticResource BotonRedondeado}"
							x:Name="buttonConsultar"
							IsEnabled="False"
							Click="ButtonConsultar" />
					</StackPanel>
				</StackPanel>
			</ContentControl>
			<ContentControl
				Style="{StaticResource ContentControlLindo}"
				Margin="25,25,25,25"
				HorizontalAlignment="Center">
				<StackPanel
					HorizontalAlignment="Center"
					Margin="5">
					<TextBlock
						Text="Disponibilidades"
						FontSize="24"
						FontFamily="Ringbearer"
						FontWeight="Bold"
						Margin="0 0 0 10"
						HorizontalAlignment="Center" />
					<StackPanel>
						<ListView
							ItemsSource="{Binding DisponibilidadesItemsSource}"
							SelectedValue="{Binding SelectedDisponibilidad, Mode=TwoWay}"
							Margin="5"
							VerticalAlignment="Top">
							<ListView.View>
								<GridView>
									<GridViewColumn
										Header="Fecha"
										Width="90"
										DisplayMemberBinding="{Binding Fecha, StringFormat=d}" />
									<GridViewColumn
										Header="Hora"
										Width="50"
										DisplayMemberBinding="{Binding Hora}" />
									<GridViewColumn
										Header="Día"
										Width="80"
										DisplayMemberBinding="{Binding DiaSemana.DiaNombre}" />
									<GridViewColumn
										Header="Médico"
										Width="150"
										DisplayMemberBinding="{Binding Medico}" />
								</GridView>
							</ListView.View>
						</ListView>
					</StackPanel>
					<StackPanel
						HorizontalAlignment="Center"
						Margin="10,5,10,5"
						VerticalAlignment="Bottom">
						<Button
							Content="Reservar selección"
							Width="150"
							Height="35"
							Margin="25,10,25,10"
							FontSize="15"
							Style="{StaticResource BotonRedondeado}"
							IsEnabled="False"
							Click="Click_AgendarNuevoTurno" />
					</StackPanel>
				</StackPanel>
			</ContentControl>
		</StackPanel>
		<StackPanel
			Orientation="Horizontal"
			Height="auto"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Margin="25,0,25,25">
			<Button
				Content="Cancelar"
				Width="120"
				Height="35"
				Margin="10"
				Style="{StaticResource BotonRedondeado}"
				Click="ButtonCancelar" />
			<Button
				Content="Salir"
				Width="120"
				Height="35"
				Margin="10"
				Style="{StaticResource BotonRedondeado}"
				Click="ButtonSalir" />
		</StackPanel>
	</StackPanel>
</Window>
