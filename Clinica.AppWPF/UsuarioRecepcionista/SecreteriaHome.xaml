<Window
	x:Class="Clinica.AppWPF.UsuarioRecepcionista.RecepcionistaHome"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Clinica Medica - Home"
	WindowStartupLocation="CenterScreen">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg" />
	</Window.Background>
	<Grid
		Margin="25">
		<!-- Columnas: logo | contenido | logo (podés usar una sola) -->
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="333" />
			<ColumnDefinition
				Width="auto" />
			<ColumnDefinition
				Width="333" />
		</Grid.ColumnDefinitions>
		<!-- Filas: header | cuerpo | footer -->
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="auto" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<!-- ===========================
             1) HEADER: título + sonidos
           =========================== -->
		<Grid
			Grid.ColumnSpan="3"
			Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="Auto" />
			</Grid.ColumnDefinitions>
			<Label
				Grid.Column="0"
				Grid.ColumnSpan="3"
				Content="Recepcionista"
				Style="{StaticResource LabelLindo}"
				FontSize="45"
				FontFamily="Palatino Linotype"
				Foreground="#FF0F0A2B"
				VerticalAlignment="Center"
				Margin="25,25,25,25"
				HorizontalContentAlignment="Center"
				FontWeight="Bold" />
			<CheckBox
				x:Name="soundCheckBox"
				Content="Sonidos?"
				Click="soundCheckBox_Checked"
				Margin="865,10,0,0"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Height="48"
				Width="149"
				FontFamily="SachaWynterTight"
				FontSize="10">
				<CheckBox.Template>
					<ControlTemplate
						TargetType="CheckBox">
						<StackPanel
							Orientation="Horizontal">
							<Image
								Width="40"
								Height="40">
								<Image.Style>
									<Style
										TargetType="Image">
										<Style.Triggers>
											<!-- Checked state without hover -->
											<DataTrigger
												Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
												Value="True">
												<Setter
													Property="Source"
													Value="pack://application:,,,/PublishedResources/images/sonidoOn.png" />
											</DataTrigger>
											<!-- Unchecked state without hover -->
											<DataTrigger
												Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
												Value="False">
												<Setter
													Property="Source"
													Value="pack://application:,,,/PublishedResources/images/sonidoOff.png" />
											</DataTrigger>
											<!-- Checked state with hover -->
											<MultiDataTrigger>
												<MultiDataTrigger.Conditions>
													<Condition
														Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
														Value="True" />
													<Condition
														Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=CheckBox}}"
														Value="True" />
												</MultiDataTrigger.Conditions>
												<Setter
													Property="Source"
													Value="pack://application:,,,/PublishedResources/images/sonidoOn_hover.png" />
											</MultiDataTrigger>
											<!-- Unchecked state with hover -->
											<MultiDataTrigger>
												<MultiDataTrigger.Conditions>
													<Condition
														Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
														Value="False" />
													<Condition
														Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=CheckBox}}"
														Value="True" />
												</MultiDataTrigger.Conditions>
												<Setter
													Property="Source"
													Value="pack://application:,,,/PublishedResources/images/sonidoOff_hover.png" />
											</MultiDataTrigger>
										</Style.Triggers>
									</Style>
								</Image.Style>
							</Image>
							<!-- Display optional text content next to the image -->
							<ContentPresenter
								VerticalAlignment="Center"
								Margin="5,0,0,0" />
						</StackPanel>
					</ControlTemplate>
				</CheckBox.Template>
			</CheckBox>
		</Grid>
		<!-- ===========================
             2) CUERPO CENTRAL: botones + logo
           =========================== -->
		<!-- LOGO a la izquierda -->
		<Label
			Grid.Row="2"
			Grid.Column="3"
			VerticalAlignment="Center"
			Style="{StaticResource LabelLindo}"
			FontSize="20"
			FontFamily="SachaWynterTight Linotype"
			Foreground="#FF333363"
			Content="`Mala Praxis SXXI´"
			Background="{x:Null}"
			HorizontalContentAlignment="Center"
			HorizontalAlignment="Center" />
		<!-- BOTONES CENTRALES -->
		<StackPanel
			Grid.Row="1"
			Grid.Column="1"
			VerticalAlignment="Center"
			Margin="25,25,25,25">
			<Label
				Content="{Binding MensajeBienvenida}"
				FontSize="24"
				FontFamily="Palatino Linotype"
				FontWeight="Bold"
				Foreground="#FF0F0A2B"
				Margin="0,0,0,20"
				Height="40" />
			<Button
				Content="Gestión de Pacientes"
				Height="45"
				Width="235"
				Click="MetodoBotonGestionPacientes"
				Style="{StaticResource BotonRedondeado}"
				FontSize="22"
				FontWeight="Bold"
				Margin="0,7" />
			<Button
				Content="Gestión de Turnos"
				Height="45"
				Width="235"
				Click="MetodoBotonGestionTurnos"
				Style="{StaticResource BotonRedondeado}"
				FontSize="22"
				FontWeight="Bold"
				Margin="0,7" />
		</StackPanel>
		<!-- ===========================
             3) FOOTER: Cerrar sesión / Salir
           =========================== -->
		<StackPanel
			Grid.Row="2"
			Grid.Column="1"
			Orientation="Vertical"
			Margin="25,25,25,25">
			<Button
				Content="Cerrar sesión"
				Height="37"
				Width="170"
				Click="MetodoBotonLogout"
				Style="{StaticResource BotonRedondeado}"
				FontSize="20"
				FontWeight="Bold"
				Margin="10" />
			<Button
				Content="Salir"
				Height="37"
				Width="170"
				Click="ButtonSalir"
				Style="{StaticResource BotonRedondeado}"
				FontSize="20"
				Margin="10"
				FontWeight="Bold" />
		</StackPanel>
	</Grid>
</Window>
