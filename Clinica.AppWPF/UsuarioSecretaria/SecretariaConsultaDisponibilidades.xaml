<Window
	x:Class="Clinica.AppWPF.UsuarioSecretaria.SecretariaConsultaDisponibilidades"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Alta de turno"
	WindowStartupLocation="CenterScreen"
	Height="626"
	Width="1020"
	Padding="20">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images/falopa.jpg" />
	</Window.Background>
	<Grid
		Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="2*" />
			<ColumnDefinition
				Width="3*" />
			<ColumnDefinition
				Width="2*" />
		</Grid.ColumnDefinitions>
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			HorizontalContentAlignment="Center"
			VerticalContentAlignment="Center"
			Grid.Column="0"
			Margin="15"
			Grid.RowSpan="2">
			<StackPanel
				Margin="5"
				Orientation="Vertical">
				<TextBlock
					Grid.Row="0"
					Grid.ColumnSpan="3"
					Text="Alta de turno"
					FontSize="28"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					Margin="0,0,0,20" />
				<TextBlock
					Text="Especialidad"
					FontWeight="Bold" />
				<ComboBox
					ItemsSource="{Binding EspecialidadesDisponiblesItemsSource}"
					DisplayMemberPath="Displayear"
					SelectedValuePath="Codigo"
					SelectedValue="{Binding SelectedEspecialidadCodigo, Mode=TwoWay}"
					Width="250" />
				<Separator
					Margin="0 10" />
				<TextBlock
					Text="Médico (opcional)"
					FontWeight="Bold" />
				<ComboBox
					ItemsSource="{Binding MedicosEspecialistasItemsSource}"
					DisplayMemberPath="Displayear"
					SelectedValuePath="Id"
					SelectedValue="{Binding SelectedMedicoId, Mode=TwoWay}"
					Width="250" />
				<Separator
					Margin="0 10" />
				<CheckBox
					Content="Filtrar por día"
					IsChecked="{Binding FiltroDiaEnabled}" />
				<TextBlock
					Text="Día de la semana"
					FontWeight="Bold" />
				<ComboBox
					ItemsSource="{Binding DiasSemanaItemsSource}"
					DisplayMemberPath="DiaNombre"
					SelectedValue="{Binding SelectedDiaValue, Mode=TwoWay}"
					IsEnabled="{Binding FiltroDiaEnabled}"
					Width="250" />
				<Separator
					Margin="0 10" />
				<!-- Filtro fecha -->
				<TextBlock
					Text="A partir del día:"
					FontWeight="Bold" />
				<DatePicker
					SelectedDate="{Binding PreferedFechaValue, Mode=TwoWay}" />
				<Separator
					Margin="0 10" />
				<!-- Filtro hora -->
				<CheckBox
					Content="Filtrar por hora"
					IsChecked="{Binding FiltroHoraEnabled}" />
				<TextBlock
					Text="Hora mínima:"
					FontWeight="Bold" />
				<ComboBox
					ItemsSource="{Binding HorasItemsSource}"
					SelectedItem="{Binding SelectedHoraValue, Mode=TwoWay}"
					IsEnabled="{Binding FiltroHoraEnabled}"
					Width="150"
					ItemStringFormat="HH:mm" />
			</StackPanel>
		</ContentControl>
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Grid.Column="1"
			Grid.RowSpan="2"
			Margin="15">
			<StackPanel>
				<TextBlock
					Text="Disponibilidades"
					FontSize="24"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					Margin="0 0 0 10"
					HorizontalAlignment="Center" />
				<ListView
					ItemsSource="{Binding DisponibilidadesItemsSource}"
					SelectedValue="{Binding SelectedDisponibilidad, Mode=TwoWay}"
					Height="334"
					Margin="5">
					<ListView.View>
						<GridView>
							<GridViewColumn
								Header="Fecha"
								Width="90"
								DisplayMemberBinding="{Binding Fecha, StringFormat=d}" />
							<GridViewColumn
								Header="Hora"
								Width="50"
								DisplayMemberBinding="{Binding Hora}" />
							<GridViewColumn
								Header="Día"
								Width="80"
								DisplayMemberBinding="{Binding DiaSemana.DiaNombre}" />
							<GridViewColumn
								Header="Médico"
								Width="150"
								DisplayMemberBinding="{Binding Medico}" />
						</GridView>
					</ListView.View>
				</ListView>
			</StackPanel>
		</ContentControl>
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Grid.Column="2"
			Margin="15"
			Grid.RowSpan="2">
			<StackPanel
				Orientation="Vertical">
				<TextBlock
					FontSize="20"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"><Run
						Text="Paciente" /><Run
						Text=" " /><LineBreak /><Run
						Text="Seleccionado" /></TextBlock>
				<!-- Campos -->
				<TextBlock
					Text="DNI:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					x:Name="txtPacienteDni" />
				<TextBlock
					Text="Nombre:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					x:Name="txtPacienteNombre" />
				<TextBlock
					Text="Apellido:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					x:Name="txtPacienteApellido" />
				<TextBlock
					Text="Correo:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					x:Name="txtPacienteEmail" />
				<TextBlock
					Text="Teléfono:"
					FontWeight="Bold"
					Margin="0 10 0 0" />
				<TextBlock
					x:Name="txtPacienteTelefono" />
				<Button
					Content="Modificar"
					Style="{StaticResource BotonRedondeado}"
					Width="130"
					Height="40"
					Margin="0 20 0 0"
					HorizontalAlignment="Center"
					x:Name="buttonModificarPaciente"
					Click="ButtonModificarPaciente"
					IsEnabled="False" />
			</StackPanel>
		</ContentControl>
		<StackPanel
			Grid.Column="0"
			Grid.Row="3"
			VerticalAlignment="Center"
			Height="110">
			<Button
				Content="Cancelar"
				Width="120"
				Height="35"
				Margin="10"
				Style="{StaticResource BotonRedondeado}"
				Click="ButtonCancelar" />
			<Button
				Content="Salir"
				Width="120"
				Height="35"
				Margin="10"
				Style="{StaticResource BotonRedondeado}"
				Click="ButtonSalir" />
		</StackPanel>
		<StackPanel
			Grid.Column="1"
			Grid.Row="3"
			Orientation="Vertical"
			Grid.RowSpan="3">
			<Button
				Content="Consultar"
				Width="135"
				Height="35"
				Margin="5"
				Style="{StaticResource BotonRedondeado}"
				x:Name="buttonConsultar"
				IsEnabled="False"
				Click="ButtonConsultar" />
			<Button
				Content="Reservar seleccionado"
				Width="135"
				Height="35"
				Margin="5"
				Style="{StaticResource BotonRedondeado}"
				x:Name="buttonReservar"
				IsEnabled="False"
				Click="ButtonReservar" />
		</StackPanel>
	</Grid>
</Window>
