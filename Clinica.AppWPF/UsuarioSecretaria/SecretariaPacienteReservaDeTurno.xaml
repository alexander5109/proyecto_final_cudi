<Window
	x:Class="Clinica.AppWPF.UsuarioSecretaria.SecretariaPacienteReservaDeTurno"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Alta de turno"
	Height="520"
	Width="820"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	WindowStartupLocation="CenterScreen"
	Padding="10">
	<Grid
		Margin="15"
		RowDefinitions="Auto, Auto, *, Auto">
		<!-- TÍTULO -->
		<TextBlock
			FontSize="28"
			FontFamily="Ringbearer"
			Foreground="#FF03050A"
			Margin="0 0 0 10"><Run
				Language="es-es"
				Text="Reserv" /><Run
				Text="a de turno" /></TextBlock>
		<!-- FORMULARIO -->
		<Grid
			Grid.Row="1"
			Margin="0 0 0 10"
			ColumnDefinitions="Auto, 1*, Auto">
			<!-- Labels y Combos -->
			<StackPanel
				Orientation="Vertical"
				Grid.Column="0"
				Margin="0 0 20 0">
				<TextBlock
					Text="Paciente "
					FontWeight="Bold"
					Margin="10" />
				<TextBlock
					Text="Especialidad"
					FontWeight="Bold"
					Margin="10" />
				<TextBlock
					Text="Médicos especialistas"
					FontWeight="Bold"
					Margin="10" />
				<TextBlock
					Text="Día semana"
					FontWeight="Bold"
					Margin="10" />
				<TextBlock
					Text="Hora"
					FontWeight="Bold"
					Margin="10" />
			</StackPanel>
			<!-- Controles principales -->
			<StackPanel
				Orientation="Vertical"
				Grid.Column="1">
				<ComboBox
					ItemsSource="{Binding Pacientes}"
					DisplayMemberPath="Nombre"
					SelectedValuePath="Id"
					SelectedValue="{Binding SelectedPacienteId, Mode=TwoWay}"
					Width="250"
					Margin="7" />
				<ComboBox
					ItemsSource="{Binding Especialidades}"
					DisplayMemberPath="Especialidades"
					SelectedValuePath="Id"
					SelectedValue="{Binding SelectedEspecialidadId, Mode=TwoWay}"
					Width="250"
					Margin="7" />
				<ComboBox
					ItemsSource="{Binding MedicosEspecialistas}"
					DisplayMemberPath="Nombre"
					SelectedValuePath="Id"
					SelectedValue="{Binding SelectedMedicoId, Mode=TwoWay}"
					Width="250"
					Margin="7" />
				<ComboBox
					ItemsSource="{Binding DiasSemana}"
					DisplayMemberPath="NombreEspañol"
					SelectedValuePath="Valor"
					SelectedValue="{Binding SelectedDiaValue, Mode=TwoWay}"
					IsEnabled="{Binding FiltroDiaEnabled}"
					Width="250"
					Margin="7" />
				<ComboBox
					ItemsSource="{Binding Horas}"
					SelectedValue="{Binding SelectedHora}"
					IsEnabled="{Binding FiltroHoraEnabled}"
					Width="250"
					Margin="7" />
			</StackPanel>
			<!-- Checkboxes a la derecha -->
			<StackPanel
				Orientation="Vertical"
				Grid.Column="2">
				<TextBlock
					Text=""
					Height="22" />
				<!-- Espaciador -->
				<CheckBox
					Content="Usar filtro día"
					IsChecked="{Binding FiltroDiaEnabled, Mode=TwoWay}"
					Margin="0 5" />
				<CheckBox
					Content="Usar filtro hora"
					IsChecked="{Binding FiltroHoraEnabled, Mode=TwoWay}"
					Margin="0 15 0 0" />
			</StackPanel>
		</Grid>
		<!-- LISTVIEW -->
		<StackPanel
			Grid.Row="2">
			<TextBlock
				Text="Disponibilidades"
				FontWeight="Bold"
				Margin="0 0 0 5" />
			<ListView
				x:Name="txtDisponibilidades"
				Height="136">
				<ListView.View>
					<GridView>
						<GridViewColumn
							Header="Fecha"
							Width="155"
							DisplayMemberBinding="{Binding Fecha}" />
						<GridViewColumn
							Header="Día"
							Width="177"
							DisplayMemberBinding="{Binding DiaSemana.NombreEspañol}" />
						<GridViewColumn
							Header="HoraDesde"
							Width="111"
							DisplayMemberBinding="{Binding FechaHoraDesde}" />
						<GridViewColumn
							Header="Médico"
							Width="222"
							DisplayMemberBinding="{Binding MedicoDisplay}" />
					</GridView>
				</ListView.View>
				<ListView
					Height="100"
					Width="100">
					<ListView.View>
						<GridView>
							<GridViewColumn />
						</GridView>
					</ListView.View>
				</ListView>
			</ListView>
		</StackPanel>
		<!-- BOTONES -->
		<StackPanel
			Grid.Row="3"
			Orientation="Horizontal"
			HorizontalAlignment="Right"
			Margin="15">
			<Button
				Content="Cancelar"
				Width="120"
				Height="30"
				Margin="0 0 10 0"
				Style="{StaticResource BotonRedondeado}"
				Click="ButtonCancelar" />
			<Button
				Content="Reservar"
				Width="120"
				Height="30"
				IsEnabled="False"
				Margin="0 0 10 0"
				Style="{StaticResource BotonRedondeado}"
				Click="ButtonReservar" />
		</StackPanel>
	</Grid>
</Window>
