<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Clinica.AppWPF.UsuarioSecretaria.WindowGestionTurno"
	Title="Alta de turno"
	Height="778"
	Width="1018"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	WindowStartupLocation="CenterScreen"
	Padding="10">
	<Grid
		Margin="4">
		<Label
			Content="Alta de turno"
			HorizontalAlignment="Left"
			Margin="20,6,0,0"
			VerticalAlignment="Top"
			FontSize="28"
			FontFamily="Ringbearer"
			Foreground="#FF03050A"
			Width="259" />
		<Label
			Content="Especialidad"
			HorizontalAlignment="Left"
			Margin="20,62,0,0"
			VerticalAlignment="Top"
			FontWeight="Bold" />
		<ComboBox
			x:Name="txtEspecialidades"
			ItemsSource="{Binding EspecialidadesDisponiblesItemsSource}"
			DisplayMemberPath="Displayear"
			SelectedValuePath="Codigo"
			SelectedValue="{Binding SelectedEspecialidadCodigo, Mode=TwoWay}"
			HorizontalAlignment="Left"
			Margin="181,60,0,0"
			VerticalAlignment="Top"
			Width="371" />
		<Label
			Content="Medico en particular?:"
			HorizontalAlignment="Left"
			Margin="20,110,0,0"
			VerticalAlignment="Top"
			FontWeight="Bold" />
		<ComboBox
			x:Name="txtMedicosEspecialistas"
			ItemsSource="{Binding MedicosEspecialistasItemsSource}"
			DisplayMemberPath="Displayear"
			SelectedValuePath="Id"
			SelectedValue="{Binding SelectedMedicoId, Mode=TwoWay}"
			HorizontalAlignment="Left"
			Margin="181,108,0,0"
			VerticalAlignment="Top"
			Width="371" />
		<CheckBox
			Content="Usar filtro dia"
			IsChecked="{Binding FiltroDiaEnabled, Mode=TwoWay}"
			HorizontalAlignment="Left"
			Margin="564,156,0,0"
			VerticalAlignment="Top"
			Width="113" />
		<Label
			Content="Dia semana"
			HorizontalAlignment="Left"
			Margin="20,158,0,0"
			VerticalAlignment="Top"
			FontWeight="Bold" />
		<StackPanel
			Orientation="Vertical"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="20,268,0,0">
			<Label
				Content="A partir de dia:"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Margin="5"
				FontWeight="Bold" />
			<DatePicker
				Margin="5"
				SelectedDate="{Binding PreferedFechaValue, Mode=TwoWay}" />
		</StackPanel>
		<ComboBox
			x:Name="txtDiaSemana"
			ItemsSource="{Binding DiasSemanaItemsSource}"
			DisplayMemberPath="DiaNombre"
			SelectedValuePath="EnumValor"
			SelectedValue="{Binding SelectedDiaValue, Mode=TwoWay}"
			IsEnabled="{Binding FiltroDiaEnabled}"
			HorizontalAlignment="Left"
			Margin="181,156,0,0"
			VerticalAlignment="Top"
			Width="371" />
		<CheckBox
			Content="Usar filtro hora"
			IsChecked="{Binding FiltroHoraEnabled, Mode=TwoWay}"
			HorizontalAlignment="Left"
			Margin="564,204,0,0"
			VerticalAlignment="Top"
			Width="123" />
		<ComboBox
			x:Name="txtHora"
			ItemsSource="{Binding HorasItemsSource}"
			SelectedValue="{Binding SelectedHoraValue, Mode=TwoWay}"
			IsEnabled="{Binding FiltroHoraEnabled}"
			HorizontalAlignment="Left"
			Margin="206,204,0,0"
			VerticalAlignment="Top"
			Width="148" />
		<Label
			Content="Disponibilidades"
			HorizontalAlignment="Left"
			Margin="373,291,0,0"
			VerticalAlignment="Top"
			FontWeight="Bold" />
		<ListView
			x:Name="txtDisponibilidades"
			ItemsSource="{Binding DisponibilidadesItemsSource}"
			SelectedValue="{Binding SelectedDisponibilidad, Mode=TwoWay}"
			HorizontalAlignment="Left"
			Margin="373,328,0,0"
			VerticalAlignment="Top"
			Width="372"
			Height="170"
			SelectionMode="Single">
			<ListView.View>
				<GridView>
					<GridViewColumn
						Header="Fecha"
						Width="99"
						DisplayMemberBinding="{Binding Fecha, StringFormat=d}" />
					<GridViewColumn
						Header="Hora"
						Width="88"
						DisplayMemberBinding="{Binding Hora}" />
					<GridViewColumn
						Header="DiaSemana"
						Width="88"
						DisplayMemberBinding="{Binding DiaSemana.DiaNombre}" />
					<GridViewColumn
						Header="Medico"
						Width="111"
						DisplayMemberBinding="{Binding Medico}" />
				</GridView>
			</ListView.View>
		</ListView>
		<Button
			Content="Cancelar"
			Style="{StaticResource BotonRedondeado}"
			HorizontalAlignment="Left"
			Margin="499,677,0,0"
			VerticalAlignment="Top"
			Height="40"
			Width="120"
			Click="ButtonCancelar" />
		<Button
			x:Name="buttonReservar"
			Content="Reservar"
			Style="{StaticResource BotonRedondeado}"
			HorizontalAlignment="Right"
			Margin="0,677,564,0"
			VerticalAlignment="Top"
			Height="40"
			Width="120"
			Click="ButtonReservar"
			IsEnabled="False" />
		<Button
			x:Name="buttonConsultar"
			Content="Consultar"
			Style="{StaticResource BotonRedondeado}"
			HorizontalAlignment="Left"
			Margin="499,498,0,0"
			VerticalAlignment="Top"
			Height="40"
			Width="120"
			Click="ButtonConsultar"
			IsEnabled="False" />
		<Label
			Content="Preferencia de hora a partir:"
			HorizontalAlignment="Left"
			Margin="22,204,0,0"
			VerticalAlignment="Top"
			FontWeight="Bold" />
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Margin="781,10,19,320">
			<!-- </Expander> -->
			<!-- <Expander Header="Informacion del Paciente" IsExpanded="True" Background="Transparent" BorderThickness="0"> -->
			<StackPanel
				Orientation="Vertical"
				Background="Transparent">
				<Label
					Content="Paciente"
					FontSize="25"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					HorizontalAlignment="Center" />
				<TextBlock
					Text="DNI:"
					FontWeight="Bold"
					Margin="0,5,0,5" />
				<TextBlock
					x:Name="txtPacienteDni"
					Margin="0,0,0,10" />
				<TextBlock
					Text="Nombre:"
					FontWeight="Bold"
					Margin="0,5,0,5" />
				<TextBlock
					x:Name="txtPacienteNombre"
					Margin="0,0,0,10" />
				<TextBlock
					Text="Apellido:"
					FontWeight="Bold"
					Margin="0,5,0,5" />
				<TextBlock
					x:Name="txtPacienteApellido"
					Margin="0,0,0,10" />
				<TextBlock
					Text="Correo:"
					FontWeight="Bold"
					Margin="0,5,0,5" />
				<TextBlock
					x:Name="txtPacienteEmail"
					Margin="0,0,0,10" />
				<TextBlock
					Text="Telefono:"
					FontWeight="Bold"
					Margin="0,5,0,5" />
				<TextBlock
					x:Name="txtPacienteTelefono"
					Margin="0,0,0,10" />
				<StackPanel
					Orientation="Horizontal"
					Background="Transparent"
					HorizontalAlignment="Center"
					Width="180">
					<Button
						x:Name="buttonModificarPaciente"
						Content="Modificar"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"
						Height="30"
						Click="ButtonModificarPaciente"
						FontSize="20"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						IsEnabled="False"
						Margin="25,10,25,25"
						Width="120" />
				</StackPanel>
			</StackPanel>
		</ContentControl>
	</Grid>
</Window>