<Window
	x:Class="Clinica.AppWPF.UsuarioSecretaria.SecretariaPacientes"
	xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioSecretaria"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Clinica Medica - Pacientes"
	Height="600"
	Width="1024"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	WindowStartupLocation="CenterScreen"
	Activated="Window_ActivatedAsync">
	<Grid
		HorizontalAlignment="Stretch"
		VerticalAlignment="Stretch">
		<Grid.Background>
			<ImageBrush
				ImageSource="pack://application:,,,/PublishedResources/images/falopa.jpg" />
		</Grid.Background>
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Margin="583,17,10,180">
			<StackPanel
				Orientation="Vertical"
				Background="Transparent">
				<Label
					Content="Pacientes"
					HorizontalAlignment="Center"
					FontSize="60"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					HorizontalContentAlignment="Center"
					VerticalAlignment="Center" />
				<StackPanel>
					<StackPanel
						Width="Auto"
						Orientation="Horizontal"
						Margin="0"
						Height="18"
						VerticalAlignment="Center">
						<TextBox
							x:Name="pacientesFilterByDni"
							Width="80"
							TextChanged="FilterTextChanged"
							Margin="30,0,0,0" />
						<TextBox
							x:Name="pacientesFilterByNombre"
							Width="65"
							TextChanged="FilterTextChanged" />
						<TextBox
							x:Name="pacientesFilterByApellido"
							Width="65"
							TextChanged="FilterTextChanged" />
						<TextBox
							x:Name="pacientesFilterByEmail"
							Width="65"
							TextChanged="FilterTextChanged" />
						<TextBox
							x:Name="pacientesFilterByTelefono"
							Width="65"
							TextChanged="FilterTextChanged" />
					</StackPanel>
					<ListView
						Name="pacientesListView"
						ItemsSource="{Binding PacientesList}"
						Width="Auto"
						Margin="0"
						SelectionChanged="ListViewPacientes_SelectionChangedAsync"
						d:ItemsSource="{d:SampleData ItemCount=9}"
						Height="190">
						<ListView.View>
							<GridView>
								<!-- Dni Column -->
								<GridViewColumn
									Header="Id"
									DisplayMemberBinding="{Binding Id}"
									Width="30" />
								<GridViewColumn
									Header="Dni"
									DisplayMemberBinding="{Binding Dni}"
									Width="80" />
								<!-- Name Column -->
								<GridViewColumn
									Header="Nombre"
									DisplayMemberBinding="{Binding Nombre}"
									Width="65" />
								<GridViewColumn
									Header="Apellido"
									DisplayMemberBinding="{Binding Apellido}"
									Width="65" />
								<GridViewColumn
									Header="Email"
									DisplayMemberBinding="{Binding Email}"
									Width="65" />
								<GridViewColumn
									Header="Teléfono"
									DisplayMemberBinding="{Binding Telefono}"
									Width="65" />
							</GridView>
						</ListView.View>
					</ListView>
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					Background="Transparent"
					Height="50"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">
					<Button
						Content="Agregar nuevo"
						VerticalAlignment="Center"
						Click="ButtonAgregarPaciente"
						Height="30"
						FontSize="16"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						Width="130"
						Margin="15,0,15,0" />
					<Button
						x:Name="buttonModificarPaciente"
						Content="Modificar"
						VerticalAlignment="Center"
						Click="ButtonModificarPaciente"
						FontSize="16"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						IsEnabled="False"
						HorizontalAlignment="Right"
						Height="30"
						Width="130"
						Margin="15,0,15,0" />
				</StackPanel>
			</StackPanel>
		</ContentControl>
		<Button
			Content="Home"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Height="37"
			Width="170"
			Click="ButtonHome"
			FontSize="20"
			Style="{StaticResource BotonRedondeado}"
			FontWeight="Bold"
			BorderBrush="#FF0E0D0D"
			Margin="810,446,0,0"
			FontFamily="Baskerville Old Face" />
		<Button
			Content="Salir"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Height="37"
			Width="170"
			Click="ButtonSalir"
			FontSize="20"
			Style="{StaticResource BotonRedondeado}"
			FontWeight="Bold"
			BorderBrush="#FF0E0D0D"
			Margin="810,501,0,0"
			FontFamily="Baskerville Old Face" />
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Margin="10,17,461,210">
			<StackPanel
				Margin="5"
				Orientation="Vertical"
				Background="Transparent"
				CanVerticallyScroll="True"
				UseLayoutRounding="False">
				<Label
					Content="Historial de consultas"
					FontSize="35"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					HorizontalAlignment="Center" />
				<ListView
					x:Name="turnosListView"
					Background="Transparent"
					BorderThickness="0"
					Height="auto"
					Margin="15"
					Width="auto"
					HorizontalContentAlignment="Center"
					d:ItemsSource="{d:SampleData ItemCount=7}
					"
					HorizontalAlignment="Center">
					<ListView.View>
						<GridView>
							<GridViewColumn
								Header="FechaDeSolicitud"
								DisplayMemberBinding="{Binding FechaDeSolicitud}"
								Width="auto" />
							<GridViewColumn
								Header="FechaAsignada"
								DisplayMemberBinding="{Binding FechaHoraAsignadaDesde}"
								Width="auto" />
							<GridViewColumn
								Header="EspecialidadId"
								DisplayMemberBinding="{Binding EspecialidadCodigo}"
								Width="auto" />
							<GridViewColumn
								Header="MedicoId"
								DisplayMemberBinding="{Binding MedicoId}"
								Width="auto" />
							<GridViewColumn
								Header="Estado"
								DisplayMemberBinding="{Binding OutcomeEstado}"
								Width="auto" />
						</GridView>
					</ListView.View>
				</ListView>
				<StackPanel
					Orientation="Horizontal"
					Background="Transparent"
					HorizontalAlignment="Center">
					<Button
						x:Name="buttonReservarTurnoAPaciente"
						Content="Reservar nueva turno"
						Click="ButtonReservarTurno"
						FontSize="20"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						IsEnabled="True"
						Margin="15"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						VerticalContentAlignment="Center"
						Height="33"
						Width="250" />
					<Button
						x:Name="buttonReservarTurnoAPaciente2"
						Content="Reservar nueva turno"
						Click="ButtonReservarTurn2"
						FontSize="20"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						IsEnabled="True"
						VerticalContentAlignment="Center"
						Height="33"
						Width="250" />
				</StackPanel>
			</StackPanel>
		</ContentControl>
		<Label
			Style="{StaticResource LabelLindo}"
			x:Name="labelBaseDeDatosModo"
			Content="Modo Secretaria"
			Margin="49,471,0,0"
			FontSize="35"
			HorizontalAlignment="Left"
			FontFamily="Palatino Linotype"
			VerticalAlignment="Top"
			Foreground="#FF0F0A2B"
			HorizontalContentAlignment="Center"
			VerticalContentAlignment="Center"
			Padding="10,10,10,10"
			Width="316" />
	</Grid>
</Window>