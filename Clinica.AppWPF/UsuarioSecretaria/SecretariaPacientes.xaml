<Window
	x:Class="Clinica.AppWPF.UsuarioSecretaria.SecretariaPacientes"
	xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioSecretaria"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Clinica Medica - Pacientes"
	Height="897"
	Width="1148"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	WindowStartupLocation="CenterScreen"
	Activated="Window_ActivatedAsync">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images/falopa.jpg" />
	</Window.Background>
	<Grid
		HorizontalAlignment="Stretch"
		VerticalAlignment="Stretch">
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Margin="715,17,10,298">
			<StackPanel
				Orientation="Vertical"
				Background="Transparent">
				<Label
					Content="Pacientes"
					HorizontalAlignment="Center"
					FontSize="60"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					HorizontalContentAlignment="Center"
					VerticalAlignment="Center" />
				<StackPanel>
					<ListView
						Name="pacientesListView"
						ItemsSource="{Binding PacientesList}"
						Width="Auto"
						Margin="0"
						SelectionChanged="ListViewPacientes_SelectionChangedAsync"
						d:ItemsSource="{d:SampleData ItemCount=9}"
						Height="190">
						<ListView.View>
							<GridView>
								<!-- Dni Column -->
								<GridViewColumn
									Header="Id"
									DisplayMemberBinding="{Binding Id}"
									Width="30" />
								<GridViewColumn
									Header="Dni"
									DisplayMemberBinding="{Binding Dni}"
									Width="80" />
								<!-- Name Column -->
								<GridViewColumn
									Header="Nombre"
									DisplayMemberBinding="{Binding Nombre}"
									Width="65" />
								<GridViewColumn
									Header="Apellido"
									DisplayMemberBinding="{Binding Apellido}"
									Width="65" />
								<GridViewColumn
									Header="Email"
									DisplayMemberBinding="{Binding Email}"
									Width="65" />
								<GridViewColumn
									Header="Teléfono"
									DisplayMemberBinding="{Binding Telefono}"
									Width="65" />
							</GridView>
						</ListView.View>
					</ListView>
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					Background="Transparent"
					Height="50"
					VerticalAlignment="Center"
					HorizontalAlignment="Center">
					<Button
						Content="Agregar nuevo"
						VerticalAlignment="Center"
						Click="ButtonAgregarPaciente"
						Height="30"
						FontSize="16"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						Width="130"
						Margin="15,0,15,0" />
					<Button
						x:Name="buttonModificarPaciente"
						Content="Modificar"
						VerticalAlignment="Center"
						Click="ButtonModificarPaciente"
						FontSize="16"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						IsEnabled="False"
						HorizontalAlignment="Right"
						Height="30"
						Width="130"
						Margin="15,0,15,0" />
				</StackPanel>
			</StackPanel>
		</ContentControl>
		<StackPanel
			Margin="826,415,0,0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top">
			<Button
				Content="Home"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Height="37"
				Width="170"
				Margin="15"
				Click="ButtonHome"
				FontSize="20"
				Style="{StaticResource BotonRedondeado}"
				FontWeight="Bold"
				BorderBrush="#FF0E0D0D"
				FontFamily="Baskerville Old Face" />
			<Button
				Content="Salir"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Height="37"
				Width="170"
				Margin="15"
				Click="ButtonSalir"
				FontSize="20"
				Style="{StaticResource BotonRedondeado}"
				FontWeight="Bold"
				BorderBrush="#FF0E0D0D"
				FontFamily="Baskerville Old Face" />
		</StackPanel>
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Margin="10,17,521,479">
			<StackPanel
				Margin="5"
				Orientation="Vertical"
				Background="Transparent"
				CanVerticallyScroll="True"
				UseLayoutRounding="False">
				<Label
					Content="Historial de consultas"
					FontSize="35"
					FontFamily="Ringbearer"
					FontWeight="Bold"
					HorizontalAlignment="Center" />
				<ListView
					x:Name="turnosListView"
					Background="Transparent"
					BorderThickness="0"
					Height="auto"
					Margin="15"
					Width="auto"
					HorizontalContentAlignment="Center"
					d:ItemsSource="{d:SampleData ItemCount=7}
					"
					HorizontalAlignment="Center">
					<ListView.View>
						<GridView>
							<GridViewColumn
								Header="FechaDeSolicitud"
								DisplayMemberBinding="{Binding FechaSolicitud}"
								Width="auto" />
							<GridViewColumn
								Header="FechaAsignada"
								DisplayMemberBinding="{Binding FechaHoraAsignadaDesde}"
								Width="auto" />
							<GridViewColumn
								Header="EspecialidadId"
								DisplayMemberBinding="{Binding EspecialidadCodigo}"
								Width="auto" />
							<GridViewColumn
								Header="MedicoId"
								DisplayMemberBinding="{Binding MedicoId}"
								Width="auto" />
							<GridViewColumn
								Header="Estado"
								DisplayMemberBinding="{Binding OutcomeEstado}"
								Width="auto" />
						</GridView>
					</ListView.View>
				</ListView>
				<StackPanel
					Orientation="Horizontal"
					Background="Transparent"
					Margin="5"
					HorizontalAlignment="Center">
					<Button
						x:Name="buttonReservarTurnoAPaciente"
						Content="Reservar nueva turno"
						Click="ButtonReservarTurno"
						FontSize="20"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						IsEnabled="True"
						Margin="15"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						VerticalContentAlignment="Center"
						Height="33"
						Width="250" />
				</StackPanel>
			</StackPanel>
		</ContentControl>
		<Label
			Style="{StaticResource LabelLindo}"
			x:Name="labelBaseDeDatosModo"
			Content="Modo Secretaria"
			Margin="768,731,0,0"
			FontSize="35"
			HorizontalAlignment="Left"
			FontFamily="Palatino Linotype"
			VerticalAlignment="Top"
			Foreground="#FF0F0A2B"
			HorizontalContentAlignment="Center"
			VerticalContentAlignment="Center"
			Padding="10,10,10,10"
			Width="316" />
		<ContentControl
			Style="{StaticResource ContentControlLindo}"
			Margin="85,441,723,224">
			<StackPanel
				Orientation="Vertical"
				Margin="10">
				<Label
					Content="Estado del turno:"
					FontWeight="Bold" />
				<ComboBox
					ItemsSource="{Binding Estados}"
					SelectedItem="{Binding EstadoSeleccionado, Mode=TwoWay}"
					Width="200" />
				<Label
					Content="Comentario:"
					FontWeight="Bold"
					Margin="0,10,0,0" />
				<TextBox
					Text="{Binding Comentario}"
					Width="250"
					Height="60"
					TextWrapping="Wrap" />
				<Button
					Content="Guardar"
					Style="{StaticResource BotonRedondeado}"
					Command="{Binding ConfirmarCommand}"
					Width="108"
					Height="26" />
			</StackPanel>
		</ContentControl>
	</Grid>
</Window>