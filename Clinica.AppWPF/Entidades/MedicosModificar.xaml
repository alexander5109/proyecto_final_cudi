<Window x:Class="Clinica.AppWPF.MedicosModificar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Clinica Medica - Médicos Modificar"
        Height="700" Width="1010"
        WindowStartupLocation="CenterScreen">

	<Window.Background>
		<ImageBrush ImageSource="pack://application:,,,/PublishedResources/images/MedicosFondo.jpg"
                    Stretch="UniformToFill"/>
	</Window.Background>

	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Título -->
		<Label Content="Médico"
               Grid.Row="0"
               FontSize="32"
               FontFamily="Ringbearer"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Margin="0,0,0,10"/>

		<!-- Formulario principal -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="200"/>
				<!-- Columna Labels -->
				<ColumnDefinition Width="250"/>
				<!-- Columna Inputs -->
				<ColumnDefinition Width="*"/>
				<!-- Columna Agenda -->
			</Grid.ColumnDefinitions>

			<!-- Definir filas para los campos -->
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Labels + Inputs -->
			<Label Content="Nombre" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="Apellido" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtLastName" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="DNI" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtDni" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="Teléfono" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtTelefono" Grid.Row="3" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="Provincia" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtProvincia" Grid.Row="4" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="Domicilio" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtDomicilio" Grid.Row="5" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="Localidad" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtLocalidad" Grid.Row="6" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="Especialidad" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
			<!-- <TextBox x:Name="txtEspecialidad" Grid.Row="7" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>-->
			<ComboBox x:Name="txtEspecialidades"
		HorizontalAlignment="Center"
		Grid.Row="7"
		Grid.Column="1"
		VerticalAlignment="Top"
		Margin="5"
		Width="210"
		Height="27" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" SelectionChanged="txtEspecialidades_SelectionChanged"
		/>


			<Label Content="Sueldo Mínimo Garantizado" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
			<TextBox x:Name="txtSueldoMinimoGarantizado" Grid.Row="8" Grid.Column="1" Style="{StaticResource TextBoxLindo2}" Margin="5"/>

			<Label Content="Fecha de Ingreso" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center"/>
			<DatePicker x:Name="txtFechaIngreso" Grid.Row="9" Grid.Column="1" Margin="5"/>

			<Label Content="Realiza Guardia" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center"/>
			<CheckBox x:Name="txtGuardia" Grid.Row="10" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5"/>

			<!-- Agenda: TreeView + botones -->
			<StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="11" Margin="20,0,0,0">
				<Label Content="Días de atención" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>

				<TreeView x:Name="txtHorariosMedicos" Height="400">
					<TreeView.ItemTemplate>
						<HierarchicalDataTemplate ItemsSource="{Binding Horarios}">
							<TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
							<HierarchicalDataTemplate.ItemTemplate>
								<DataTemplate>
									<StackPanel Orientation="Horizontal" Margin="15,0,0,0">
										<TextBlock Text="{Binding Desde}" Width="50"/>
										<TextBlock Text=" - "/>
										<TextBlock Text="{Binding Hasta}" Width="50"/>
									</StackPanel>
								</DataTemplate>
							</HierarchicalDataTemplate.ItemTemplate>
						</HierarchicalDataTemplate>
					</TreeView.ItemTemplate>
				</TreeView>




				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
					<Button x:Name="btnAgregarHorario" Content="➕ Agregar" Margin="5" Click="BtnAgregarHorario_Click"/>
					<Button x:Name="btnEditarHorario" Content="✏️ Editar" Margin="5" Click="BtnEditarHorario_Click"/>
					<Button x:Name="btnEliminarHorario" Content="🗑 Eliminar" Margin="5" Click="BtnEliminarHorario_Click"/>
				</StackPanel>
			</StackPanel>
		</Grid>

		<!-- Botones inferiores -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
			<Button Content="Guardar cambios" Width="190" Height="40" Margin="0,0,10,0" Click="ButtonGuardar" Style="{StaticResource BotonRedondeado}"/>
			<Button Content="Eliminar médico" Width="190" Height="40" Margin="0,0,10,0" Click="ButtonEliminar" Style="{StaticResource BotonRedondeado}"/>
			<Button Content="Volver" Width="190" Height="40" Click="ButtonCancelar" Style="{StaticResource BotonRedondeado}"/>
		</StackPanel>
	</Grid>
</Window>
