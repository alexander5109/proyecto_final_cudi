<Window x:Class="Clinica.AppWPF.Ventanas.EditarFranjaHorarioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinica.AppWPF.Ventanas"
        mc:Ignorable="d"
		Height="235"
		Width="350"
        Title="EditarFranjaHorarioDialog">


	<Window.Background>
		<ImageBrush ImageSource="pack://application:,,,/PublishedResources/images/MedicosFondo.jpg"
				Stretch="UniformToFill"/>
	</Window.Background>

	<Grid Margin="25,25,25,25" VerticalAlignment="Center" HorizontalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Margin="0 5">
			<Label Content="Desde:" Width="60"/>
			<TextBox x:Name="txtDesde" Width="80"/>
		</StackPanel>

		<StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 5">
			<Label Content="Hasta:" Width="60"/>
			<TextBox x:Name="txtHasta" Width="80"/>
		</StackPanel>

		<StackPanel Grid.Row="2" Orientation="Horizontal"
			HorizontalAlignment="Center" Margin="15,15,15,15" VerticalAlignment="Center">
			<Button Content="Aceptar" Width="80" Margin="5"
				Click="Aceptar_Click"/>
			<Button Content="Cancelar" Width="80" Margin="5"
				Click="Cancelar_Click"/>
		</StackPanel>
	</Grid>
</Window>
