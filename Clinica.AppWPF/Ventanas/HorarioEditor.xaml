<Window x:Class="Clinica.AppWPF.HorarioEditor"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Clinica.AppWPF"
		mc:Ignorable="d"
		Title="Editar horario"
		Height="400"
		Width="400"
		xmlns:tipos="clr-namespace:Clinica.Dominio.Tipos;assembly=Clinica.Dominio"
		Icon="pack://application:,,,/PublishedResources/icons/icono.png"
		WindowStartupLocation="CenterScreen">

	<Window.Background>
		<ImageBrush ImageSource="pack://application:,,,/PublishedResources/images/MedicosFondo.jpg"
				Stretch="UniformToFill"/>
	</Window.Background>

	<StackPanel Margin="15" VerticalAlignment="Center">

		<Label Content="Día de la semana:"/>
		<ComboBox x:Name="cmbDiaSemana" SelectedIndex="0" Margin="0,5,0,10">
			<ComboBoxItem Content="Lunes"/>
			<ComboBoxItem Content="Martes"/>
			<ComboBoxItem Content="Miércoles"/>
			<ComboBoxItem Content="Jueves"/>
			<ComboBoxItem Content="Viernes"/>
			<ComboBoxItem Content="Sábado"/>
			<ComboBoxItem Content="Domingo"/>
		</ComboBox>

		<Label Content="Desde:"/>
		<TextBox x:Name="txtDesde" Margin="0,5,0,10"  />

		<Label Content="Hasta:"/>
		<TextBox x:Name="txtHasta" Margin="0,5,0,10" />

		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Content="Guardar" Margin="5" Width="80" Click="BtnGuardar_Click"/>
			<Button Content="Cancelar" Margin="5" Width="80" Click="BtnCancelar_Click"/>
		</StackPanel>
	</StackPanel>
</Window>
