<Window
	x:Class="Clinica.AppWPF.UsuarioSuperadmin.HomeSuperadmin"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Clinica Medica - Home"
	Width="1024"
	Height="600"
	WindowStartupLocation="CenterScreen">
	<Window.Background>
		<ImageBrush
			ImageSource="/PublishedResources/images2025sol/fondoAbstracto2025.jpg" />
	</Window.Background>
	<Grid
		Margin="25,25,25,25">
		<StackPanel
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Width="650"
			Margin="25,25,25,25">
			<Label
				Content="Sistema de Gestión"
				FontSize="30"
				FontFamily="SachaWynterTight Linotype"
				Background="{x:Null}"
				Foreground="#FF1F1F3C"
				Padding="0,0,0,0"
				HorizontalAlignment="Center" />
			<Label
				Content="`Reprocesos SXXI´"
				FontSize="20"
				FontFamily="SachaWynterTight Linotype"
				Foreground="#FF1B1B35"
				HorizontalAlignment="Center"
				Margin="0,0,0,25" />
			<Label
				Content="Home SuperAdmin"
				Style="{StaticResource LabelLindoConPiu}"
				FontSize="30"
				HorizontalContentAlignment="Center"
				FontWeight="Bold"
				VerticalAlignment="Center"
				Margin="30,0,30,0" />
			<StackPanel
				Margin="25"
				Orientation="Horizontal"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<StackPanel>
					<Button
						Content="Ver Médicos"
						HorizontalAlignment="Center"
						VerticalAlignment="Top"
						Height="37"
						Width="170"
						Click="ClickBoton_GestionMedicos"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						Margin="14,7,14,7"></Button>
					<Button
						Content="Ver Pacientes"
						HorizontalAlignment="Center"
						VerticalAlignment="Top"
						Height="37"
						Width="170"
						Click="ClickBoton_GestionPacientes"
						FontSize="20"
						Style="{StaticResource BotonRedondeado}"
						FontWeight="Bold"
						BorderBrush="#FF0E0D0D"
						FontFamily="Baskerville Old Face"
						Margin="14,7,14,7"></Button>
				</StackPanel>
				<StackPanel>
					<Button
						Content="Ver Turnos"
						HorizontalAlignment="Center"
						VerticalAlignment="Top"
						Height="37"
						Width="170"
						Click="ClickBoton_GestionTurnos"
						Style="{StaticResource BotonRedondeado}"
						Margin="14,7,14,7"></Button>
					<Button
						Content="Ver Usuarios"
						Height="37"
						Width="170"
						Click="ClickBoton_GestionUsuarios"
						Style="{StaticResource BotonRedondeado}"
						Margin="14,7,14,7" />
				</StackPanel>
			</StackPanel>
			<Button
				Content="Cerrar sesión"
				Height="35"
				Width="150"
				Click="ClickBoton_Logout"
				Style="{StaticResource BotonRedondeado}"
				FontSize="18"
				FontWeight="Bold"
				Margin="7,7,7,7" />
			<Button
				Content="Salir"
				Height="35"
				Width="150"
				Click="ClickBoton_Salir"
				Style="{StaticResource BotonRedondeado}"
				FontSize="18"
				Margin="7,7,7,7"
				FontWeight="Bold" />
		</StackPanel>
		<CheckBox
			x:Name="soundCheckBox"
			Content="Sonidos?"
			Click="soundCheckBox_Checked"
			Margin="0,25,25,0"
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			FontFamily="SachaWynterTight"
			FontSize="10"
			Grid.Column="2">
			<CheckBox.Template>
				<ControlTemplate
					TargetType="CheckBox">
					<StackPanel
						Orientation="Horizontal">
						<Image
							Width="40"
							Height="40">
							<Image.Style>
								<Style
									TargetType="Image">
									<Style.Triggers>
										<!-- Checked state without hover -->
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="True">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOn.png" />
										</DataTrigger>
										<!-- Unchecked state without hover -->
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="False">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOff.png" />
										</DataTrigger>
										<!-- Checked state with hover -->
										<MultiDataTrigger>
											<MultiDataTrigger.Conditions>
												<Condition
													Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="True" />
												<Condition
													Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="True" />
											</MultiDataTrigger.Conditions>
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOn_hover.png" />
										</MultiDataTrigger>
										<!-- Unchecked state with hover -->
										<MultiDataTrigger>
											<MultiDataTrigger.Conditions>
												<Condition
													Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="False" />
												<Condition
													Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=CheckBox}}"
													Value="True" />
											</MultiDataTrigger.Conditions>
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOff_hover.png" />
										</MultiDataTrigger>
									</Style.Triggers>
								</Style>
							</Image.Style>
						</Image>
					</StackPanel>
				</ControlTemplate>
			</CheckBox.Template>
		</CheckBox>
		<Label
			Content="Bienvenido SuperAdmin Charles"
			FontSize="24"
			FontFamily="Palatino Linotype"
			FontWeight="Bold"
			Foreground="#FF0F0A2B"
			Margin="4,0,0,25"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			VerticalContentAlignment="Center"
			HorizontalContentAlignment="Center"
			Width="187"
			Grid.ColumnSpan="2"
			Grid.Column="1">
			<Label.ContentTemplate>
				<DataTemplate>
					<TextBlock
						Text="{Binding}"
						TextWrapping="Wrap" />
				</DataTemplate>
			</Label.ContentTemplate>
		</Label>
	</Grid>
</Window>
