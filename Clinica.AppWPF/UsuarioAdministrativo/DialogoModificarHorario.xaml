<Window x:Class="Clinica.AppWPF.Ventanas.DialogoModificarHorario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinica.AppWPF.Ventanas"
        mc:Ignorable="d"
        Height="235"
        Width="350"
        Title="EditarFranjaHorarioDialog">

    <!-- ===== ESTILO DE BOTONES (mismo que en las otras pantallas) ===== -->
    <Window.Resources>
        <Style x:Key="BotonRedondeado" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <Border.Background>
                                <!-- imagen verde/azul de los otros botones -->
                                <ImageBrush ImageSource="/UsuarioSecretaria/this-beautiful-gradient-art-piece-showcases-a-blend-of-teal-green-and-blue-tones-free-photo.jpeg"
                                            Stretch="Fill" />
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.9" />
                            </Trigger>
                            <!-- presionado -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.8" />
                            </Trigger>
                            <!-- deshabilitado -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Fondo -->
    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/PublishedResources/images/8fdc7c4e57f0801738927b57b4a8e837.jpg"
                    Stretch="UniformToFill"/>
    </Window.Background>

    <Grid Margin="25" VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Height="30">
            <Label Content="Día de la semana:"
                   Width="100"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center" FontFamily="Bahnschrift"/>
            <ComboBox 
                x:Name="txtComboBox"
                ItemsSource="{Binding DiaSemanaValues}"
                SelectedItem="{Binding Horario.DiaSemana}"
                HorizontalAlignment="Center"
                Margin="15,0,0,0"
                VerticalAlignment="Center" 
                VerticalContentAlignment="Center" 
                HorizontalContentAlignment="Center" 
                Width="120" 
                Height="20"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Height="30">
            <Label Content="Hora Inicio:" Width="100"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bahnschrift"/>
            <TextBox Text="{Binding Horario.Desde}"
                     Width="122"
                     VerticalAlignment="Center"
                     Margin="15,0,0,0"
                     Height="20"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Height="30">
            <Label Content="Hora Fin:" Width="100"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bahnschrift"/>
            <TextBox Text="{Binding Horario.Hasta}"
                     Width="122"
                     VerticalAlignment="Center"
                     Margin="15,0,0,0"
                     Height="20"/>
        </StackPanel>

        <!-- Botones con estilo nuevo -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Height="40">
            <Button Content="Aceptar"
                    Width="110"
                    Height="30"
                    Margin="5"
                    Click="Aceptar_Click"
                    Style="{StaticResource BotonRedondeado}" />
            <Button Content="Cancelar"
                    Width="110"
                    Height="30"
                    Margin="5"
                    Click="Cancelar_Click"
                    Style="{StaticResource BotonRedondeado}" />
        </StackPanel>
    </Grid>
</Window>
