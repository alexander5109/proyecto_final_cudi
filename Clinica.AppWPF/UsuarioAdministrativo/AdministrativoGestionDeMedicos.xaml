<Window
	x:Class="Clinica.AppWPF.UsuarioAdministrativo.AdministrativoGestionDeMedicos"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Clinica Medica - Medicos"
	Width="1024"
	Height="600"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	Activated="Window_Activated"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<!-- ============== FONDO GENERAL ============== -->
	<Window.Background>
		<ImageBrush
			ImageSource="/PublishedResources/images2025sol/fondoClaro2025.jpg"
			Stretch="Fill" />
	</Window.Background>
	<!-- ============== LAYOUT PRINCIPAL ============== -->
	<Grid
		Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<!-- Título -->
			<RowDefinition
				Height="*" />
			<!-- Lista -->
			<RowDefinition
				Height="Auto" />
			<!-- Botones abajo -->
		</Grid.RowDefinitions>
		<!-- TÍTULO -->
		<Label
			Grid.Row="0"
			Content="Medicos"
			FontSize="33"
			FontFamily="Javanese Text"
			FlowDirection="RightToLeft"
			Style="{StaticResource LabelLindoConPiu}"
			HorizontalContentAlignment="Right"
			FontWeight="Bold"
			HorizontalAlignment="Center"
			Height="Auto"
			VerticalAlignment="Center"
			Padding="5,5,5,5" />
		<!-- LISTA DE MÉDICOS -->
		<ListView
			Grid.Row="1"
			x:Name="medicosListView"
			Background="White"
			BorderThickness="0"
			BorderBrush="#72828790"
			HorizontalContentAlignment="Center"
			ScrollViewer.HorizontalScrollBarVisibility="Auto"
			ScrollViewer.VerticalScrollBarVisibility="Auto"
			Margin="120,0,120,10"
			d:ItemsSource="{d:SampleData ItemCount=5}">
			<ListView.View>
				<GridView>
					<GridViewColumn
						Header="Id"
						DisplayMemberBinding="{Binding Id}"
						Width="40" />
					<GridViewColumn
						Header="Dni"
						DisplayMemberBinding="{Binding Dni}"
						Width="80" />
					<GridViewColumn
						Header="Nombre"
						DisplayMemberBinding="{Binding Nombre}"
						Width="120" />
					<GridViewColumn
						Header="Apellido"
						DisplayMemberBinding="{Binding Apellido}"
						Width="120" />
					<GridViewColumn
						Header="Especialidad"
						DisplayMemberBinding="{Binding EspecialidadCodigo}"
						Width="140" />
					<GridViewColumn
						Header="Teléfono"
						DisplayMemberBinding="{Binding Telefono}"
						Width="100" />
					<GridViewColumn
						Header="Guardia"
						DisplayMemberBinding="{Binding HaceGuardias}"
						Width="80" />
				</GridView>
			</ListView.View>
		</ListView>
		<!-- BOTONES ABAJO A LA IZQUIERDA (Home / Salir) -->
		<StackPanel
			Grid.Row="2"
			Orientation="Horizontal"
			HorizontalAlignment="Left"
			Margin="0,10,0,0">
			<Button
				Content="Home"
				Height="37"
				Width="170"
				Click="ButtonHome"
				FontSize="20"
				FontFamily="Baskerville Old Face"
				Style="{StaticResource BotonRedondeado}"
				Margin="0,0,10,0" />
			<Button
				Content="Salir"
				Height="37"
				Width="170"
				Click="ClickBoton_Salir"
				FontSize="20"
				FontFamily="Baskerville Old Face"
				Style="{StaticResource BotonRedondeado}" />
		</StackPanel>
		<!-- BOTONES ABAJO A LA DERECHA (Agregar / Modificar) -->
		<StackPanel
			Grid.Row="2"
			Orientation="Horizontal"
			HorizontalAlignment="Right"
			Margin="0,10,0,0">
			<Button
				Content="Agregar nuevo"
				Height="37"
				Width="170"
				Click="ButtonAgregarMedico"
				FontSize="20"
				FontFamily="Baskerville Old Face"
				Style="{StaticResource BotonRedondeado}"
				Margin="0,0,10,0" />
			<Button
				x:Name="ClickBoton_ModificarMedico"
				Content="Modificar"
				Height="37"
				Width="170"
				Click="ClickBoton_ModificarMedico"
				FontSize="20"
				FontFamily="Baskerville Old Face"
				Style="{StaticResource BotonRedondeado}" />
		</StackPanel>
	</Grid>
</Window>
