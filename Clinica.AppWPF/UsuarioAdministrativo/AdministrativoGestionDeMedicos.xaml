<Window
	x:Class="Clinica.AppWPF.UsuarioAdministrativo.AdministrativoGestionDeMedicos"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Clinica Medica - Medicos"
	Height="600"
	Width="1024"
	Icon="pack://application:,,,/PublishedResources/icons/icono.png"
	Activated="Window_Activated"
	WindowStartupLocation="CenterScreen"
	mc:Ignorable="d">
	<!-- ============== FONDO GENERAL ============== -->
	<Window.Background>
		<ImageBrush
			ImageSource="/PublishedResources/images2025sol/fondoClaro2025.jpg"
			Stretch="Fill" />
	</Window.Background>
	<Grid
		Margin="25">
		<StackPanel
			Orientation="Vertical"
			Background="Transparent"
			Margin="25,10,0,0"
			VerticalAlignment="Top"
			HorizontalAlignment="Left" />
		<!-- Botones Home / Salir abajo a la izquierda -->
		<Button
			Content="Home"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Height="37"
			Width="170"
			Click="ButtonHome"
			FontSize="20"
			FontFamily="Baskerville Old Face"
			Margin="47,426,0,0"
			Style="{StaticResource BotonRedondeado}" />
		<Button
			Content="Salir"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Height="37"
			Width="170"
			Click="ButtonSalir"
			FontSize="20"
			FontFamily="Baskerville Old Face"
			Margin="47,484,0,0"
			Style="{StaticResource BotonRedondeado}" />
		<!-- Labels de modo de DB y título -->
		<StackPanel
			Orientation="Horizontal"
			Background="Transparent"
			Margin="524,413,333,119">
			<!-- Agregar nuevo -->
			<Button
				Content="Agregar nuevo"
				Height="35"
				Width="150"
				Click="ButtonAgregarMedico"
				FontSize="20"
				FontFamily="Baskerville Old Face"
				Style="{StaticResource BotonRedondeado}" />
		</StackPanel>
		<Button
			x:Name="buttonModificarMedico"
			Content="Modificar"
			Click="ButtonModificarMedico"
			FontSize="20"
			FontFamily="Baskerville Old Face"
			Style="{StaticResource BotonRedondeado}"
			Margin="717,430,168,137" />
		<StackPanel
			Orientation="Vertical"
			Background="Transparent"
			Margin="120,18,120,121">
			<Label
				Content="Medicos"
				FontSize="33"
				FontFamily="Javanese Text"
				FlowDirection="RightToLeft"
				Style="{StaticResource LabelLindo}"
				HorizontalContentAlignment="Center"
				FontWeight="Bold"
				VerticalAlignment="Center"
				Width="502"
				Height="71"
				HorizontalAlignment="Center"
				VerticalContentAlignment="Center" />
			<ListView
				x:Name="medicosListView"
				Background="Transparent"
				BorderThickness="0"
				BorderBrush="#72828790"
				HorizontalAlignment="Center"
				Margin="0,0,0,10"
				HorizontalContentAlignment="Center"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				VerticalAlignment="Center">
				<ListView.View>
					<GridView>
						<GridViewColumn
							Header="Id"
							DisplayMemberBinding="{Binding Id}"
							Width="25" />
						<GridViewColumn
							Header="Dni"
							DisplayMemberBinding="{Binding Dni}"
							Width="60" />
						<GridViewColumn
							Header="Nombre"
							DisplayMemberBinding="{Binding Nombre}"
							Width="65" />
						<GridViewColumn
							Header="Apellido"
							DisplayMemberBinding="{Binding Apellido}"
							Width="70" />
						<GridViewColumn
							Header="Especialidad"
							DisplayMemberBinding="{Binding EspecialidadCodigo}"
							Width="80" />
						<GridViewColumn
							Header="Teléfono"
							DisplayMemberBinding="{Binding Telefono}"
							Width="70" />
						<GridViewColumn
							Header="Guardia"
							DisplayMemberBinding="{Binding HaceGuardias}"
							Width="45" />
						<GridViewColumn
							Header="Email"
							DisplayMemberBinding="{Binding Email}"
							Width="70" />
					</GridView>
				</ListView.View>
			</ListView>
		</StackPanel>
		<StackPanel
			Orientation="Horizontal"
			Background="Transparent"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Margin="342,414,0,0">
			<Button
				Content="Agregar nuevo"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Height="35"
				Width="150"
				Click="ButtonAgregarMedico"
				FontSize="20"
				Style="{StaticResource BotonRedondeado}"
				FontWeight="Bold"
				BorderBrush="#FF0E0D0D"
				FontFamily="Baskerville Old Face"
				Margin="25,10,25,25" />
			<Button
				x:Name="buttonModificarMedico1"
				Content="Modificar"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Height="35"
				Click="ButtonModificarMedico"
				FontSize="20"
				Style="{StaticResource BotonRedondeado}"
				FontWeight="Bold"
				BorderBrush="#FF0E0D0D"
				FontFamily="Baskerville Old Face"
				IsEnabled="False"
				Margin="25,10,25,25"
				Width="150" />
		</StackPanel>
	</Grid>
</Window>
