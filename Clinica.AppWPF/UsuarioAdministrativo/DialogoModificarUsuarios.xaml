<Window
	x:Class="Clinica.AppWPF.UsuarioAdministrativo.DialogoModificarUsuarios"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioAdministrativo"
	mc:Ignorable="d"
	Title="Clinica Medica - Usuarios"
	Width="1024"
	Height="600">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoVerde2025.jpg" />
	</Window.Background>
	<!-- GRID PRINCIPAL -->
	<Grid
		Margin="25,25,25,25">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<!-- ========================================================= -->
		<!-- HEADER PRINCIPAL -->
		<!-- ========================================================= -->
		<Label
			Grid.ColumnSpan="2"
			Content="Modificar/Agregar Usuario"
			FontSize="33"
			Style="{StaticResource LabelLindoConPiu}"
			HorizontalContentAlignment="Center"
			FontWeight="Bold"
			VerticalContentAlignment="Center"
			VerticalAlignment="Center" />
		<!-- HEADER SECUNDARIO (vacío pero reservado) -->
		<Border
			Grid.Row="1"
			Grid.ColumnSpan="2"
			Height="10" />
		<!-- ========================================================= -->
		<!-- FORMULARIO -->
		<!-- ========================================================= -->
		<StackPanel
			Grid.Row="2"
			Grid.Column="0"
			Margin="20,5,20,5">
			<!-- NOMBRE -->
			<StackPanel
				Margin="5">
				<Label
					Content="Username" />
				<TextBox
					Height="30"
					MaxLength="50"
					Text="{Binding UserName}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- APELLIDO -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Nueva contraseña?" />
				<TextBox
					Height="30"
					MaxLength="50"
					Text="{Binding NuevaPassword}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- DNI -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Nombre" />
				<TextBox
					Height="30"
					MaxLength="8"
					Text="{Binding Nombre}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- EMAIL -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Apellido" />
				<TextBox
					Height="30"
					Text="{Binding Apellido}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- TELEFONO -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Teléfono" />
				<TextBox
					Height="30"
					MaxLength="10"
					Text="{Binding Telefono}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- Email -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Email" />
				<TextBox
					Height="30"
					MaxLength="10"
					Text="{Binding Email}"
					Style="{StaticResource TextBoxLindo2}" />
			</StackPanel>
			<!-- FECHA NACIMIENTO -->
			<StackPanel
				Margin="0,5" />
		</StackPanel>
		<!-- Columna 2 -->
		<StackPanel
			Grid.Row="2"
			Grid.Column="1"
			Margin="20,5,20,5">
			<!-- PROVINCIA -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Rol de Usuario" />
				<ComboBox
					ItemsSource="{Binding EnumRoles}"
					SelectedItem="{Binding EnumRole}"
					Height="30" />
			</StackPanel>
			<!-- FECHA INGRESO 
			<StackPanel
				Margin="0,5">
				<Label
					Content="Fecha de ingreso" />
				<Label
					Height="30"
					Content="{Binding FechaIngreso}"
					Style="{StaticResource LabelLindoCuadroGrisSombreado}"
					FontSize="12" />
				</StackPanel> 
			-->
			<!-- ID -->
			<StackPanel
				Margin="0,5">
				<Label
					Content="Usuario Id" />
				<Label
					Height="30"
					Content="{Binding Id}"
					Style="{StaticResource LabelLindoCuadroGrisSombreado}"
					FontSize="12" />
			</StackPanel>
		</StackPanel>
		<!-- ========================================================= -->
		<!-- BOTONES A LA DERECHA -->
		<!-- ========================================================= -->
		<StackPanel
			Grid.Column="2"
			Margin="0,25,0,25"
			Grid.RowSpan="3"
			VerticalAlignment="Bottom">
			<StackPanel
				Margin="15"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<Button
					Content="Guardar cambios"
					Width="200"
					Height="35"
					Margin="7,7,7,7"
					Style="{StaticResource BotonRedondeadoVerde}"
					FontFamily="Baskerville Old Face"
					IsEnabled="{Binding PuedeGuardarCambios}"
					Click="ClickBoton_GuardarCambios"
					Foreground="#FF162F28"
					FontSize="20" />
				<Button
					Content="Eliminar médico"
					Width="200"
					Height="35"
					Margin="7,7,7,7"
					Style="{StaticResource BotonRedondeadoVerde}"
					FontFamily="Baskerville Old Face"
					IsEnabled="{Binding PuedeEliminar}"
					Click="ClickBoton_Eliminar"
					FontSize="20" />
			</StackPanel>
			<StackPanel
				Margin="15"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<Button
					Content="Salir"
					Width="170"
					Height="37"
					Margin="7,7,7,7"
					Click="ClickBoton_Salir"
					FontSize="20"
					Style="{StaticResource BotonRedondeadoVerde}" />
				<Button
					Content="Volver"
					Width="155"
					Height="35"
					Style="{StaticResource BotonRedondeadoVerde}"
					FontFamily="Baskerville Old Face"
					Click="ClickBoton_Cancelar"
					FontSize="20"
					Margin="7,7,7,7" />
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
