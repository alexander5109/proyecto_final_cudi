<Window
	x:Class="Clinica.AppWPF.UsuarioAdministrativo.DialogoModificarUsuario"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioAdministrativo"
	mc:Ignorable="d"
	Title="DialogoModificarUsuario"
	Height="768"
	Width="999">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg" />
	</Window.Background>
	<Grid
		Margin="25">
		<Grid
			Margin="25">
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="600" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions></Grid.RowDefinitions>
			<StackPanel
				VerticalAlignment="Center"
				HorizontalAlignment="Center"
				Grid.Column="1"
				Height="618"
				Width="568">
				<Label
					Margin="25"
					Content="Modificacion de Usuarios"
					Style="{StaticResource LabelLindo}"
					FontSize="35"
					HorizontalAlignment="Center"
					FontFamily="Palatino Linotype"
					Width="Auto"
					VerticalAlignment="Center"
					Foreground="#FF0F0A2B"
					FontWeight="Bold" />
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Right">
					<TextBlock
						Text="UserName"
						FontFamily="Bahnschrift Light"
						FontSize="20"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
					<TextBox
						Style="{StaticResource TextBoxLindo2}"
						Width="220"
						Height="32"
						FontSize="16"
						Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Right">
					<TextBlock
						Text="Contraseña"
						FontFamily="Bahnschrift Light"
						FontSize="20"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
					<TextBox
						Style="{StaticResource TextBoxLindo2}"
						Width="220"
						Height="32"
						FontSize="16"
						Text="{Binding PasswordHash, UpdateSourceTrigger=PropertyChanged}"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Right">
					<TextBlock
						Text="Nombre"
						FontFamily="Bahnschrift Light"
						FontSize="20"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
					<TextBox
						Style="{StaticResource TextBoxLindo2}"
						Width="220"
						Height="32"
						FontSize="16"
						Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Right">
					<TextBlock
						Text="Apellido"
						FontFamily="Bahnschrift Light"
						FontSize="20"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
					<TextBox
						Style="{StaticResource TextBoxLindo2}"
						Width="220"
						Height="32"
						FontSize="16"
						Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged}"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Right">
					<TextBlock
						Text="Email"
						FontFamily="Bahnschrift Light"
						FontSize="20"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Margin="15,15,15,15" />
					<TextBox
						Style="{StaticResource TextBoxLindo2}"
						Width="220"
						Height="32"
						FontSize="16"
						Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
						HorizontalAlignment="Center"
						Margin="15,15,15,15" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Right">
					<TextBlock
						Text="Telefono"
						FontFamily="Bahnschrift Light"
						FontSize="20"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Margin="15,15,15,15" />
					<TextBox
						Style="{StaticResource TextBoxLindo2}"
						Width="220"
						Height="32"
						FontSize="16"
						Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}"
						HorizontalAlignment="Center"
						Margin="15,15,15,15"
						VerticalAlignment="Center" />
				</StackPanel>
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Right">
					<TextBlock
						Text="Rol de usuario"
						FontFamily="Bahnschrift Light"
						FontSize="20"
						HorizontalAlignment="Center"
						VerticalAlignment="Center"
						Margin="15,15,15,15" />
					<ComboBox
						ItemsSource="{Binding RolesList}"
						Width="220"
						Height="32"
						SelectedItem="{Binding SelectedRole, Mode=TwoWay}"
						DisplayMemberPath="Nombre"
						Margin="15,5,15,5" />
				</StackPanel>
			</StackPanel>
			<StackPanel
			Margin="25"
				Grid.Row="0"
				VerticalAlignment="Bottom"
				HorizontalAlignment="Center"
				Height="86"
				Width="110">
				<Button
					Content="Salir"
					Style="{StaticResource BotonRedondeado}"
					Width="110"
					Height="38"
					FontSize="20" />
				<Button
					Content="Cancelar"
					Style="{StaticResource BotonRedondeado}"
					Width="110"
					Height="38"
					Margin="0 10 0 0"
					FontSize="20" />
			</StackPanel>
		</Grid>
	</Grid>
</Window>
