<Window
	x:Class="Clinica.AppWPF.UsuarioAdministrativo.AdminMedicosModificar"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Title="Clinica Medica - Médicos Modificar"
	xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioAdministrativo"
	Width="1024"
	Height="600"
	WindowStartupLocation="CenterScreen">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images/doctor.jpg" />
	</Window.Background>
	<!-- Título -->
	<!-- Formulario principal -->
	<Grid
		Margin="25">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="auto" />
			<!-- Columna Labels -->
			<ColumnDefinition
				Width="250" />
			<ColumnDefinition
				Width="*" />
			<!-- Columna Labels -->
			<ColumnDefinition
				Width="250" />
			<!-- Columna Inputs -->
			<ColumnDefinition
				Width="auto" />
			<!-- Columna Agenda -->
		</Grid.ColumnDefinitions>
		<!-- Definir filas para los campos -->
		<Grid.RowDefinitions>
			<RowDefinition
				Height="auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="Auto" />
			<RowDefinition
				Height="*" />
		</Grid.RowDefinitions>
		<!-- Labels + Inputs -->
		<Label
			Content="Datos de Médico"
			FontSize="40"
			Grid.Row="0"
			FontFamily="Bahnschrift"
			VerticalAlignment="Center"
			Style="{StaticResource LabelLindoConPiu}"
			FlowDirection="RightToLeft"
			HorizontalContentAlignment="Center"
			Grid.ColumnSpan="3"
			Margin="25,25,25,25" />
		<Label
			Content="Nombre"
			Grid.Row="1"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<TextBox
			Grid.Row="1"
			Grid.Column="1"
			Margin="15,5,15,5"
			Style="{StaticResource TextBoxLindo2}"
			Text="{Binding Nombre}"
			Height="28" />
		<Label
			Content="Apellido"
			Grid.Row="2"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<TextBox
			Grid.Row="2"
			Grid.Column="1"
			MaxLength="50"
			Margin="15,5,15,5"
			Style="{StaticResource TextBoxLindo2}"
			Text="{Binding Apellido}"
			Height="28" />
		<Label
			Content="DNI"
			Grid.Row="3"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<TextBox
			Grid.Row="3"
			Grid.Column="1"
			Margin="15,5,15,5"
			MaxLength="8"
			Style="{StaticResource TextBoxLindo2}"
			Text="{Binding Dni}"
			Height="28" />
		<Label
			Content="Email"
			Grid.Row="4"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<TextBox
			Grid.Row="4"
			Grid.Column="1"
			MaxLength="10"
			Margin="15,5,15,5"
			Style="{StaticResource TextBoxLindo2}"
			Text="{Binding Email}"
			Height="28" />
		<Label
			Content="Teléfono"
			Grid.Row="5"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<TextBox
			Grid.Row="5"
			Grid.Column="1"
			MaxLength="10"
			Margin="15,5,15,5"
			Style="{StaticResource TextBoxLindo2}"
			Text="{Binding Telefono}"
			Height="28" />
		<Label
			Content="Provincia"
			Grid.Row="6"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<ComboBox
			Grid.Row="6"
			Grid.Column="1"
			ItemsSource="{Binding Provincias}"
			SelectedItem="{Binding Provincia}"
			Margin="15,5,15,5"
			DisplayMemberPath="Nombre"
			Height="28" />
		<Label
			Content="Domicilio"
			Grid.Row="7"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<TextBox
			Grid.Row="7"
			Grid.Column="1"
			MaxLength="50"
			Margin="15,5,15,5"
			Style="{StaticResource TextBoxLindo2}"
			Text="{Binding Domicilio}"
			Height="28" />
		<Label
			Content="Localidad"
			Grid.Row="8"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<TextBox
			Grid.Row="8"
			Grid.Column="1"
			MaxLength="50"
			Margin="15,5,15,5"
			Style="{StaticResource TextBoxLindo2}"
			Text="{Binding Localidad}"
			Height="28" />
		<Label
			Content="Especialidad"
			Grid.Row="9"
			Grid.Column="0"
			VerticalAlignment="Center" />
		<ComboBox
			Grid.Row="9"
			Grid.Column="1"
			ItemsSource="{Binding EspecialidadesDisponiblesItemsSource}"
			DisplayMemberPath="NombreEspecialidad"
			SelectedItem="{Binding Especialidad, Mode=TwoWay}"
			Margin="15,5,15,5"
			Height="28" />
		<Label
			Content="Realiza Guardia"
			Grid.Row="11"
			Grid.Column="0"
			VerticalAlignment="Top"
			HorizontalAlignment="Left" />
		<CheckBox
			Grid.Row="11"
			Grid.Column="1"
			Margin="15,5,15,5"
			IsChecked="{Binding HaceGuardias, Mode=TwoWay}"
			VerticalAlignment="Top"
			HorizontalAlignment="Left"
			Height="28.4" />
		<!-- ID PACIENTE -->
		<Label
			Content="Fecha de Ingreso"
			Grid.Row="2"
			Grid.Column="2"
			VerticalAlignment="Center" />
		<Label
			Height="28"
			Grid.Row="2"
			Grid.Column="3"
			Margin="15,5,15,5"
			Content="{Binding FechaIngreso}"
			Style="{StaticResource LabelLindoCuadroGrisSombreado}"
			FontSize="12" />
		<!-- ID MEDICO -->
		<Label
			Grid.Row="1"
			Grid.Column="2"
			Content="Médico Id" />
		<Label
			Grid.Row="1"
			Grid.Column="3"
			Margin="15,5,15,5"
			Content="{Binding Id}"
			Style="{StaticResource LabelLindoCuadroGrisSombreado}"
			FontSize="12"
			Height="28" />
		<!-- Agenda -->
		<Label
			Grid.Row="3"
			Grid.Column="2"
			Grid.ColumnSpan="2"
			Content="Horarios"
			FontWeight="Bold"
			HorizontalAlignment="Center"
			Margin="0,0,0,5"
			FontSize="20"
			VerticalAlignment="Center"
			HorizontalContentAlignment="Center"
			VerticalContentAlignment="Center" />
		<!-- Agenda -->
		<TreeView
			x:Name="treeViewHorarios"
			Grid.Row="4"
			Grid.Column="2"
			Grid.ColumnSpan="2"
			Grid.RowSpan="6"
			ItemsSource="{Binding HorariosAgrupados}"
			Margin="5,5,5,5"
			MinHeight="150">
			<TreeView.Resources>
				<HierarchicalDataTemplate
					DataType="{x:Type local:ViewModelHorarioAgrupado}"
					ItemsSource="{Binding Horarios}">
					<TextBlock
						Text="{Binding DiaSemanaNombre}"
						FontWeight="Bold" />
				</HierarchicalDataTemplate>
				<DataTemplate
					DataType="{x:Type local:HorarioMedicoViewModel}">
					<StackPanel
						Orientation="Horizontal"
						Margin="15,0,0,0">
						<TextBlock
							Text="{Binding Desde}"
							Width="50" />
						<TextBlock
							Text=" - " />
						<TextBlock
							Text="{Binding Hasta}"
							Width="50" />
					</StackPanel>
				</DataTemplate>
			</TreeView.Resources>
		</TreeView>
		<StackPanel
			Grid.Row="9"
			Grid.Column="2"
			Grid.ColumnSpan="2"
			Grid.RowSpan="15"
			Orientation="Horizontal"
			HorizontalAlignment="Center"
			VerticalAlignment="Center">
			<Button
				Content="✏️ Editar"
				IsEnabled="{Binding PuedeEditarHorario}"
				Style="{StaticResource BotonRedondeado}"
				Click="ClickBoton_EditarHorario"
				Margin="5"
				Height="25"
				Width="111"
				FontSize="12"
				HorizontalContentAlignment="Center" />
			<Button
				Content="🗑 Eliminar"
				IsEnabled="{Binding PuedeEditarHorario}"
				Style="{StaticResource BotonRedondeado}"
				Click="ClickBoton_EliminarHorario"
				Margin="5"
				Height="25"
				Width="111"
				FontSize="12" />
			<Button
				Content="➕ Agregar"
				Style="{StaticResource BotonRedondeado}"
				Click="ClickBoton_AgregarHorario"
				Margin="5"
				Height="25"
				Width="111"
				FontSize="12" />
		</StackPanel>
		<!-- Agenda END -->
		<StackPanel
			Grid.Column="4"
			Grid.RowSpan="15"
			Orientation="Vertical"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Grid.Row="1">
			<Button
				Content="Guardar cambios"
				Width="190"
				Height="40"
				Click="ClickBoton_GuardarCambios"
				Style="{StaticResource BotonRedondeado}"
				Margin="7,7,7,7" />
			<Button
				Content="Eliminar médico"
				Width="190"
				Height="40"
				Margin="7,7,7,7"
				Click="ClickBoton_Eliminar"
				Style="{StaticResource BotonRedondeado}" />
			<StackPanel
				Margin="15"
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<Button
					Content="Salir"
					Width="170"
					Height="37"
					Click="ClickBoton_Salir"
					FontSize="20"
					Style="{StaticResource BotonRedondeado}" />
				<Button
					Content="Volver"
					Width="155"
					Height="35"
					Style="{StaticResource BotonRedondeado}"
					FontFamily="Baskerville Old Face"
					Click="ClickBoton_Cancelar"
					FontSize="20"
					Margin="7,7,7,7" />
			</StackPanel>
		</StackPanel>
	</Grid>
	<!-- Botones inferiores -->
</Window>
