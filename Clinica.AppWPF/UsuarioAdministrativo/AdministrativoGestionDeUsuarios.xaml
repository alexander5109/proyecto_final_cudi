<Window
	x:Class="Clinica.AppWPF.UsuarioAdministrativo.AdministrativoGestionDeUsuarios"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioAdministrativo"
	mc:Ignorable="d"
	Title="Gestión de Usuarios"
	Height="620"
	Width="1157"
	WindowStartupLocation="CenterScreen">
	<!-- ============== FONDO GENERAL ============== -->
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images2025sol/fondoClaro2025.jpg"
			Stretch="Fill" />
	</Window.Background>
	<!-- ============== CONTENIDO ============== -->
	<Grid
		Margin="25">
		<StackPanel
			Orientation="Vertical"
			Background="Transparent"
			HorizontalAlignment="Center"
			Margin="0,106,0,0">
			<ListView
				Height="374"
				Background="#80FFFFFF"
				BorderThickness="1"
				BorderBrush="#72828790"
				SelectionChanged="MedicosListView_SelectionChanged"
				HorizontalContentAlignment="Stretch"
				ScrollViewer.HorizontalScrollBarVisibility="Auto"
				ScrollViewer.VerticalScrollBarVisibility="Auto"
				Width="605">
				<ListView.View>
					<GridView>
						<GridViewColumn
							Header="Nombre de usuario"
							DisplayMemberBinding="{Binding UserName}"
							Width="140" />
						<GridViewColumn
							Header="Rol"
							DisplayMemberBinding="{Binding UsuarioRol}"
							Width="100" />
						<GridViewColumn
							Header="Médico relacionado"
							DisplayMemberBinding="{Binding MedicoRelacionado}"
							Width="150" />
					</GridView>
				</ListView.View>
			</ListView>
			<!-- Botones inferiores -->
			<StackPanel
				Orientation="Horizontal"
				Background="Transparent"
				HorizontalAlignment="Center">
				<!-- Botón Agregar -->
				<Button
					Content="Agregar nuevo"
					Width="170"
					Height="40"
					Margin="10"
					Click="ButtonAgregarMedico"
					FontSize="18"
					FontFamily="Baskerville Old Face"
					FontWeight="Bold"
					BorderBrush="Transparent"
					Style="{StaticResource BotonRedondeado}" />
				<!-- Botón Modificar -->
				<Button
					x:Name="buttonModificarMedico"
					Content="Modificar"
					Width="170"
					Height="40"
					Margin="10"
					Click="ButtonModificarMedico"
					FontSize="18"
					FontFamily="Baskerville Old Face"
					FontWeight="Bold"
					BorderBrush="Transparent"
					Style="{StaticResource BotonRedondeado}"
					IsEnabled="False" />
			</StackPanel>
		</StackPanel>
		<Label
			Style="{StaticResource LabelLindoConPiu}"
			Grid.Row="0"
			Content="Cuentas de usuario"
			FontSize="40"
			FontFamily="Ringbearer"
			FontWeight="Bold"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			HorizontalContentAlignment="Center"
			VerticalContentAlignment="Center"
			Grid.RowSpan="7" />
		<Button
			Content="Home"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Height="37"
			Width="170"
			Click="ButtonHome"
			FontSize="20"
			FontFamily="Baskerville Old Face"
			Margin="898,171,0,0"
			Style="{StaticResource BotonRedondeado}" />
		<Button
			Content="Salir"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Height="37"
			Width="170"
			Click="ButtonSalir"
			FontSize="20"
			FontFamily="Baskerville Old Face"
			Margin="898,229,0,0"
			Style="{StaticResource BotonRedondeado}" />
		<!-- espacio libre a la derecha para futuro contenido -->
	</Grid>
</Window>
