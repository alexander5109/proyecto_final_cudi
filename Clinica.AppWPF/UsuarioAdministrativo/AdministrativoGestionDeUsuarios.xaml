<Window x:Class="Clinica.AppWPF.UsuarioAdministrativo.AdministrativoGestionDeUsuarios"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinica.AppWPF.UsuarioAdministrativo"
        mc:Ignorable="d"
        Title="Gestión de Usuarios"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <!-- ================= ESTILOS ================= -->
    <Window.Resources>

        <!-- Botón redondeado con la imagen verde/azul -->
        <Style x:Key="BotonRedondeado" TargetType="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <Border.Background>
                                <!-- imagen: this-beautiful-gradient-...jpeg -->
                                <ImageBrush ImageSource="/UsuarioSecretaria/this-beautiful-gradient-art-piece-showcases-a-blend-of-teal-green-and-blue-tones-free-photo.jpeg"
                                            Stretch="Fill" />
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>
                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.9" />
                            </Trigger>
                            <!-- Click -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.8" />
                            </Trigger>
                            <!-- Deshabilitado -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border"
                                        Property="Opacity"
                                        Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <!-- ============== FONDO GENERAL ============== -->
    <Window.Background>
        <ImageBrush
            ImageSource="pack://application:,,,/PublishedResources/images/8fdc7c4e57f0801738927b57b4a8e837.jpg"
            Stretch="Fill" />
    </Window.Background>

    <!-- ============== CONTENIDO ============== -->
    <Grid Margin="20">
        <StackPanel
            Orientation="Vertical"
            Background="Transparent"
            HorizontalAlignment="Center"
            Width="840" Margin="0,106,0,0">

            <!-- Título -->

            <!-- Lista de usuarios -->

            <!-- Botones inferiores -->
            <!-- Lista de usuarios -->
            <ListView
                Height="374"
                Background="#80FFFFFF"
                BorderThickness="1"
                BorderBrush="#72828790"
                SelectionChanged="MedicosListView_SelectionChanged"
                HorizontalContentAlignment="Stretch"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Header="Nombre de usuario"
                            DisplayMemberBinding="{Binding UserName}"
                            Width="140" />
                        <GridViewColumn
                            Header="Rol"
                            DisplayMemberBinding="{Binding UsuarioRol}"
                            Width="100" />
                        <GridViewColumn
                            Header="Médico relacionado"
                            DisplayMemberBinding="{Binding MedicoRelacionado}"
                            Width="150" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Botones inferiores -->
            <StackPanel
                Orientation="Horizontal"
                Background="Transparent"
                HorizontalAlignment="Center">

                <!-- Botón Agregar -->
                <Button
                    Content="Agregar nuevo"
                    Width="170"
                    Height="40"
                    Margin="10"
                    Click="ButtonAgregarMedico"
                    FontSize="18"
                    FontFamily="Baskerville Old Face"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Style="{StaticResource BotonRedondeado}" />

                <!-- Botón Modificar -->
                <Button
                    x:Name="buttonModificarMedico"
                    Content="Modificar"
                    Width="170"
                    Height="40"
                    Margin="10"
                    Click="ButtonModificarMedico"
                    FontSize="18"
                    FontFamily="Baskerville Old Face"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Style="{StaticResource BotonRedondeado}"
                    IsEnabled="False" />

            </StackPanel>
        </StackPanel>
        <Label
           
            Grid.Row="0"
            Content="Cuentas de usuario"
            FontSize="40"
            FontFamily="Ringbearer"
            FontWeight="Bold"
            HorizontalAlignment="Left"
            Margin="479,10,0,476" Width="365" >
            <Label.Background>
                <ImageBrush ImageSource="/UsuarioAdministrativo/pngwing.com (1).png"/>
            </Label.Background>
        </Label>

        <!-- espacio libre a la derecha para futuro contenido -->
    </Grid>
</Window>
