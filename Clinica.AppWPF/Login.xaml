<Window
	x:Class="Clinica.AppWPF.Login"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Clinica Medica - Login"
	WindowStartupLocation="CenterScreen"
	Width="1024"
	Height="600">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images/otroFondo.png"
			Stretch="UniformToFill" />
	</Window.Background>
	<Grid
		Margin="25,25,25,25">
		<StackPanel
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Margin="25,25,25,25">
			<Label
				Content="Sistema de Gestión"
				FontSize="30"
				FontFamily="SachaWynterTight Linotype"
				Background="{x:Null}"
				Foreground="#FF1B1B67"
				Padding="0,0,0,0" />
			<Label
				Content="`Reprocesos SXXI´"
				FontSize="20"
				FontFamily="SachaWynterTight Linotype"
				Background="{x:Null}"
				Foreground="#FF333363"
				HorizontalAlignment="Center"
				Margin="0,0,0,25"
				Padding="0,0,0,0" />
			<Label
				Content="Inicio de sesión"
				FontSize="28"
				FontFamily="Ringbearer"
				Background="{x:Null}"
				Foreground="#FF0E0E31"
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Grid.IsSharedSizeScope="True"
				Padding="0,0,0,0"
				Margin="5,5,5,5" />
			<TextBlock
				Text="Usuario"
				FontFamily="Bahnschrift Light"
				FontSize="20"
				HorizontalAlignment="Center" />
			<TextBox
				x:Name="guiUsuario"
				Style="{StaticResource TextBoxLindo2}"
				Width="220"
				Height="32"
				FontSize="16"
				HorizontalAlignment="Center"
				Margin="0 10 0 20" />
			<TextBlock
				Text="Contraseña"
				FontFamily="Bahnschrift Light"
				FontSize="20"
				HorizontalAlignment="Center" />
			<PasswordBox
				x:Name="guiPassword"
				Style="{StaticResource PasswordBoxLindo2}"
				Width="220"
				Height="32"
				FontSize="16"
				HorizontalAlignment="Center"
				Margin="0 10 0 30" />
			<Button
				x:Name="iniciarSesionButton"
				Content="Iniciar sesión"
				Style="{StaticResource BotonRedondeado}"
				Width="220"
				Height="45"
				IsDefault="True"
				FontSize="20"
				Background="#FF7FC7FA"
				Click="MetodoBotonIniciarSesion" />
		</StackPanel>
		<ContentControl
			HorizontalAlignment="Right"
			VerticalAlignment="Top"
			Margin="25,25,25,25">
			<CheckBox
				x:Name="soundCheckBox"
				Background="Transparent"
				Click="SoundCheckBox_Checked"
				ToolTip="Sonido"
				HorizontalAlignment="Center"
				Margin="5,5,5,5"
				VerticalAlignment="Center">
				<CheckBox.Template>
					<ControlTemplate
						TargetType="CheckBox">
						<Image
							Width="40"
							Height="40">
							<Image.Style>
								<Style
									TargetType="Image">
									<Style.Triggers>
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="True">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOn.png" />
										</DataTrigger>
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="False">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOff.png" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Image.Style>
						</Image>
					</ControlTemplate>
				</CheckBox.Template>
			</CheckBox>
		</ContentControl>
		<StackPanel
			Height="48"
			HorizontalAlignment="Left"
			VerticalAlignment="Bottom"
			Margin="25,25,25,25">
			<Button
				Content="Salir"
				Style="{StaticResource BotonRedondeado}"
				Width="110"
				Height="38"
				FontSize="20"
				Click="MetodoBotonSalir"
				HorizontalAlignment="Center"
				Padding="25,1,1,1"
				VerticalAlignment="Center"
				Margin="5,5,5,5" />
		</StackPanel>
	</Grid>
</Window>
