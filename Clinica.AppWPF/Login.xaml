<Window
	x:Class="Clinica.AppWPF.Login"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Clinica Medica - Login"
	WindowStartupLocation="CenterScreen"
	SizeToContent="WidthAndHeight">
	<Window.Background>
		<ImageBrush
			ImageSource="pack://application:,,,/PublishedResources/images/otroFondo.png"
			Stretch="UniformToFill" />
	</Window.Background>
	<Grid
		Margin="25">
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="*" />
			<ColumnDefinition
				Width="600" />
			<ColumnDefinition
				Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition
				Height="Auto"></RowDefinition>
			<RowDefinition
				Height="Auto"></RowDefinition>
			<RowDefinition
				Height="auto"></RowDefinition>
		</Grid.RowDefinitions>
		<StackPanel
			Grid.ColumnSpan="3"
			Margin="25,25,25,25">
			<Label
				Style="{StaticResource LabelLindo}"
				HorizontalAlignment="Center"
				FontSize="35"
				FontFamily="SachaWynterTight Linotype"
				Foreground="Black"
				Content="`Clinica Mala Praxis SXXI´"
				Background="{x:Null}" />
			<Label
				Style="{StaticResource LabelLindo}"
				Content="Ingreso al Sistema"
				FontSize="45"
				FontFamily="Palatino Linotype"
				HorizontalContentAlignment="Center"
				VerticalContentAlignment="Center"
				Padding="10,10,10,10"
				Foreground="Black" />
		</StackPanel>
		<StackPanel
			Grid.Row="1"
			Grid.Column="1"
			Margin="5,5,5,8">
			<TextBlock
				Text="Usuario"
				FontFamily="Bahnschrift Light"
				FontSize="20"
				HorizontalAlignment="Center" />
			<TextBox
				x:Name="guiUsuario"
				Style="{StaticResource TextBoxLindo2}"
				Width="220"
				Height="32"
				FontSize="16"
				HorizontalAlignment="Center"
				Margin="0 10 0 20" />
			<TextBlock
				Text="Contraseña"
				FontFamily="Bahnschrift Light"
				FontSize="20"
				HorizontalAlignment="Center" />
			<PasswordBox
				x:Name="guiPassword"
				Style="{StaticResource PasswordBoxLindo2}"
				Width="220"
				Height="32"
				FontSize="16"
				HorizontalAlignment="Center"
				Margin="0 10 0 30" />
			<Button
				x:Name="iniciarSesionButton"
				Content="Iniciar sesión"
				Style="{StaticResource BotonRedondeado}"
				Width="240"
				Height="50"
				IsDefault="True"
				FontSize="20"
				Background="#FF7FC7FA"
				Click="MetodoBotonIniciarSesion" />
		</StackPanel>
		<ContentControl
			Grid.Row="0"
			Grid.Column="2"
			HorizontalAlignment="Center"
			VerticalAlignment="Top"
			Height="50"
			Width="50">
			<CheckBox
				x:Name="soundCheckBox"
				Width="50"
				Height="50"
				Background="Transparent"
				Click="SoundCheckBox_Checked"
				ToolTip="Sonido">
				<CheckBox.Template>
					<ControlTemplate
						TargetType="CheckBox">
						<Image
							Width="40"
							Height="40">
							<Image.Style>
								<Style
									TargetType="Image">
									<Style.Triggers>
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="True">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOn.png" />
										</DataTrigger>
										<DataTrigger
											Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=CheckBox}}"
											Value="False">
											<Setter
												Property="Source"
												Value="pack://application:,,,/PublishedResources/images/sonidoOff.png" />
										</DataTrigger>
									</Style.Triggers>
								</Style>
							</Image.Style>
						</Image>
					</ControlTemplate>
				</CheckBox.Template>
			</CheckBox>
		</ContentControl>
		<StackPanel
			Grid.Column="0"
			Grid.Row="2"
			Height="48"
			Margin="5,5,5,5">
			<Button
				Content="Salir"
				Style="{StaticResource BotonRedondeado}"
				Width="110"
				Height="38"
				Margin="0 10 0 0"
				FontSize="20"
				Click="MetodoBotonSalir"
				VerticalAlignment="Center"
				HorizontalAlignment="Center" />
		</StackPanel>
	</Grid>
</Window>
